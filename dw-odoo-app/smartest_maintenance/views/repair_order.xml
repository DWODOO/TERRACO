<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Inherit repair order form view -->
    <record model="ir.ui.view" id="repair_order_form_view_inherit_smart">
        <field name="name">repair.order.form.view.inherit_smart</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="repair_equipement" readonly="1" invisible="1"/>
                <field name="equipement_id" string="Equipement à réparer" attrs="{'invisible':[('repair_equipement','!=',True)],'required':[('repair_equipement','=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_equipement', '=', True)],'required':[('repair_equipement','!=',True)]}</attribute>
            </xpath>
            <xpath expr="//label[@for='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_equipement', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_qty']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_equipement', '=', True)],'required':[('repair_equipement','!=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='product_uom']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_equipement', '=', True)],'required':[('repair_equipement','!=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('repair_equipement', '=', True)],'required':[('repair_equipement','!=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="maintenance_request_id" attrs="{'invisible': [('maintenance_request_id', '=', False)]}"/>
                <field name="picking_id" invisible="1"/>
                <field name="compute_state" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='%(repair.action_repair_move_lines)d']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('repair_equipement','=',True),('state', 'not in', ['done', 'cancel'])]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_created_invoice']" position="after">
                <button name="open_maintenance_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('maintenance_request_id', '=', False)]}">Maintenance</button>
                <button name="open_picking_transfert" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('picking_id', '=', False)]}">Transfert</button>
            </xpath>
        </field>
    </record>

    <record id="action_repair_on_equipment" model="ir.actions.act_window">
        <field name="name">Equipment Repair</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('repair_equipement', '=', True)]</field>
        <field name="context">{'default_repair_equipement': True}</field>
    </record>

    <menuitem
        id="menu_repair_on_equipment"
        name="Equipment Repair"
        parent="repair.menu_repair_order"
        action="action_repair_on_equipment"
        sequence="1"/>
    <menuitem
        id="menu_repair_on_equipment_maintenance"
        name="Equipment Repair"
        parent="maintenance.menu_m_request"
        action="action_repair_on_equipment"
        sequence="20"/>
</odoo>
