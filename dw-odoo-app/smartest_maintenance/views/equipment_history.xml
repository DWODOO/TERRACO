<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View    -->
    <record id="equipment_history_view_form" model="ir.ui.view">
        <field name="name">equipment.history.form.view</field>
        <field name="model">maintenance.equipment.history</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                        </group>
                        <group></group>
                        <group>
                            <field name="assign_equipment_to" widget="radio"/>
                        </group>
                        <group></group>
                        <group string="Old Affectation">
                            <field name="old_employee_id" attrs="{'invisible': [('assign_equipment_to', '!=', 'employee')]}"/>
                            <field name="old_department_id" attrs="{'invisible': [('assign_equipment_to', '!=', 'department')]}"/>
                        </group>
                        <group string="New Affectation">
                            <field name="new_employee_id" attrs="{'invisible': [('assign_equipment_to', '!=', 'employee')]
                            ,'required':[('assign_equipment_to', '=', 'employee')]}"/>
                            <field name="new_department_id" attrs="{'invisible': [('assign_equipment_to', '!=', 'department')]
                            ,'required':[('assign_equipment_to', '=', 'department')]}"/>
                        </group>
                        <group>
                            <field name="date_assignment" required="True"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="button_equipment_assign"
                        string="Assign"
                        type="object"
                        class="oe_highlight"
                        groups="maintenance.group_equipment_manager"
                    />
                </footer>
            </form>
        </field>
    </record>

     <!--    Tree View    -->

    <record id="equipment_history_view_tree" model="ir.ui.view">
        <field name="name">equipment.history.view.tree</field>
        <field name="model">maintenance.equipment.history</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="equipment_id"/>
                <field name="old_employee_id"/>
                <field name="new_employee_id"/>
                <field name="new_department_id"/>
                <field name="new_department_id"/>
                <field name="date_assignment"/>
            </tree>
        </field>
    </record>

     <!--        Action    -->
    <record id="action_maintenance_equipment_history_tree" model="ir.actions.act_window">
        <field name="name">Equipment Assignation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by':['equipment_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new equipment assignation
            </p>
        </field>
    </record>

    <!--        Menu      -->
    <menuitem id="maintenance_equipment_history"
              name="Assignation History"
              parent="maintenance.menu_equipment_form"
              groups="maintenance.group_equipment_manager,base.group_user"
              sequence="30"
              action="action_maintenance_equipment_history_tree"/>

    <menuitem
        id="menu_equipment"
        name="Equipments"
        parent="maintenance.menu_equipment_form"
        action="maintenance.hr_equipment_action"
        groups="maintenance.group_equipment_manager,base.group_user"
        sequence="20"/>

    <record id="maintenance.menu_equipment_form" model="ir.ui.menu">
        <field eval="False" name="action"/>
    </record>

</odoo>
