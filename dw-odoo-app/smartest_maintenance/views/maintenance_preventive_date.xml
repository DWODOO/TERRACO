<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--maintenance request preventive dates tree view -->
    <record id="maintenance_preventive_dates_view_tree" model="ir.ui.view">
        <field name="name">maintenance.preventive.dates.tree</field>
        <field name="model">maintenance.preventive.dates</field>
        <field name="arch" type="xml">
            <tree>
                <field name="equipment_id"/>
                <field name="start_date"/>
                <field name="period_str"/>
                <field name="nbr_due_dates"/>
            </tree>
        </field>
    </record>
    <!--maintenance request preventive dates form view -->
    <record id="maintenance_preventive_dates_view_form" model="ir.ui.view">
        <field name="name">maintenance.preventive.dates.form</field>
        <field name="model">maintenance.preventive.dates</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm_equipement_maintenance_preventif" string="Done" type="object" attrs="{'invisible': [('state', 'in', ('done'))]}"/>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box">
                        <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_open_maintenance_ids">
                            <div class="o_field_widget o_stat_info">
                                <field name="number_maintenance_request_ids" widget="statinfo"/>
                            </div>
                        </button>
                    </div>
                    <group col="2">
                        <field name="name" attrs="{'readonly': [('state','=','done')]}"/>
                    </group>
                    <group col="2">
                        <field name="equipment_id" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                    </group>
                    <group col="6">
                        <field name="user_id" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                        <field name="priority" attrs="{'readonly': [('state','=','done')]}" widget="priority"/>
                        <field name="company_id" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                    </group>
                    <group col="4">
                        <field name="start_date" required="1" attrs="{'readonly': [('state','=','done')]}"/>
                        <field name="nbr_due_dates" attrs="{'readonly': [('state','=','done')]}"/>
                    </group>
                    <group string="DurÃ©e" col="4">
                        <field name="period_str" attrs="{'readonly': [('state','=','done')]}"/>
                        <field name="period" force_save='1' attrs="{'readonly': [('state','=','done')]}"/>
                    </group>
                    <notebook>
                        <page string="Operations" name="operations">
                            <field name="operation_line_ids" context="{'default_is_operation': True}" attrs="{'readonly':[('state', 'in', ['done'])]}">
                                <tree editable="bottom">
                                    <field name="is_operation" force_save="1" invisible="1" readonly="1"/>
                                    <field name="product_id" string="Operation" domain="[('detailed_type', '=', 'service')]" required="1"/>
                                    <field name="operation_name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="PDR" name="pdr">
                            <field name="pdr_line_ids" context="{'default_is_pdr': True}" attrs="{'readonly':[('state', 'in', ['done'])]}">
                                <tree editable="bottom">
                                    <field name="is_pdr" force_save="1" invisible="1" readonly="1"/>
                                    <field name="product_id" domain="[('detailed_type', '!=', 'service')]" attrs="{'required': [('is_pdr','=',True)]}"/>
                                    <field name="product_qty" attrs="{'required': [('is_pdr','=',True)]}"/>
                                    <field name="product_uom" attrs="{'required': [('is_pdr','=',True)]}"/>
                                    <field name="location_id" domain="[('usage','=','internal')]" attrs="{'required': [('is_pdr','=',True)]}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--
        Search View - maintenance.preventive.dates
    -->
    <record model="ir.ui.view" id="view_maintenance_preventive_dates_search">
        <field name="name">maintenance.preventive.dates.search</field>
        <field name="model">maintenance.preventive.dates</field>
        <field name="arch" type="xml">
            <search string="Search Repair Orders">
                <field name="equipment_id" string="Equipment"/>
                <field name="user_id" string="Assigned To"/>
                <separator/>
                <filter string="Done" name="state" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="create_date" date="create_date"/>
                <separator/>
                <filter name="start_date" date="start_date"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Equipment" name="equipment_id" domain="[]" context="{'group_by': 'equipment_id'}"/>
                    <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Assigned" name="user_id" domain="[]" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="maintenance_preventive_dates_action" model="ir.actions.act_window">
        <field name="name">Plan Preventive Maintenance</field>
        <field name="res_model">maintenance.preventive.dates</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        id="menu_maintenance_preventive_dates"
        name="Maintenance Preventive"
        parent="maintenance.menu_m_request"
        groups="maintenance.group_equipment_manager"
        action="maintenance_preventive_dates_action"
        sequence="15"/>

</odoo>
