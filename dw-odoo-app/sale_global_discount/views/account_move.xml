<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_account_move_inherit_global_discount_form_view">
        <field name="name">account.move.view.form.inherit_global_discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                <field name="discount_amount" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals_json']" position="before">
                    <field name="amount_untaxed_with_discount" attrs="{'invisible': [('global_discount','==',0)]}" nolabel="0" colspan="4"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <group name="note_group" col="6">
                    <label for="global_discount" string="Global Discount" class="text-left"/>
                    <div class="o_row no-gutters d-flex">
                            <field name="global_discount" class="text-left" force_save="1"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>