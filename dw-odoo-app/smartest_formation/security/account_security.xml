<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="module_smartest_formation" model="ir.module.category">
            <field name="name">Formations</field>
            <field name="description">Helps You To Manage Your Formations</field>
            <field name="sequence">11</field>
        </record>
    
        <record id="group_fr_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_smartest_formation"/>
            <field name="comment">The user will be able to create course or assigne user to course</field>
        </record>
    
        <record id="group_fr_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="comment">The user will have access to the formation resources configuration as well as statistic reports.</field>
            <field name="category_id" ref="module_smartest_formation"/>
            <field name="implied_ids" eval="[(4, ref('group_fr_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"></field>                                
        </record>
</odoo>
