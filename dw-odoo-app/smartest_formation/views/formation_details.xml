<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="formation_details_view_tree" model="ir.ui.view">
            <field name="name">formation_details.view.tree</field>
            <field name="model">formation.details</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="smartest_name"/>
                    <field name="smartest_duration"/>
                    <field name="smartest_trainer"/>
                    <field name="smartest_agrement_course"/>
                    <field name="smartest_institute_id"/>
                    <field name="smartest_course_price"/>
                </tree>
            </field>
        </record>

        <record id="formation_details_view_form" model="ir.ui.view">
            <field name="name">formation_details.view.form</field>
            <field name="model">formation.details</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <field name="smartest_course_id"/>
                        </div>
                        <group>
                            <group>
                                <field name="smartest_name" placeholder="e.g. Linux Niveau 1" required="1"/>
                                <field name="smartest_formation" required="1"/>
                            </group>
                            <group>
                                <field name="smartest_institute_id"/>
                                <field name="smartest_agrement_course"/>
                                <field name="smartest_trainer"/>
                                <field name="smartest_duration"/>
                                <field name="smartest_course_price"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_formation_details">
            <field name="name">Formation List Details</field>
            <field name="res_model">formation.details</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('formation_details_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('formation_details_view_form')})]"/>

        </record>



    </data>

</odoo>