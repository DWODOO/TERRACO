<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>


        <record model="ir.ui.view" id="training_plan_form_view">
            <field name="name">plan.view.form</field>
            <field name="model">plan</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="create_formations" string="Create formations" type="object" class="oe_highlight"
                                attrs="{'invisible': [('smartest_status', 'in', ['done','cancel'])]}"/>
                        <field name="smartest_status" widget="statusbar" statusbar_visible="draft,active,done,cancel"/>
                        <button name="action_active" string="Set as Active" type="object" class="oe_highlight"
                                attrs="{'invisible': [('smartest_status', 'in', ['active','done','cancel'])]}"/>
                        <button name="action_complete" string="Set as Done" type="object" class="oe_highlight"
                                attrs="{'invisible': [('smartest_status', 'in', ['done','draft','cancel'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object"
                                attrs="{'invisible': [('smartest_status', 'in', ['active','done'])]}"/>
                    </header>
                    <sheet>
                        <div name="button_box">

                            <button class="oe_stat_button" name="create_formations_smart_button" type="object"
                                    icon="fa-files-o"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                    </span>
                                    <span class="o_stat_text">Formations</span>
                                </div>
                            </button>
                        </div>

                        <div class="oe_title">
                            <field name="smartest_plan_id"/>
                        </div>
                        <div class="oe_title">
                            <label for="smartest_name"/>
                            <h1>
                                <field name="smartest_name" placeholder="e.g. Onboarding"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="smartest_start_date" widget="daterange"
                                       options="{'related_end_date': 'smartest_end_date'}"/>
                            </group>
                            <group>
                                <field name="smartest_end_date" widget="daterange"
                                       options="{'related_start_date': 'smartest_start_date'}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="plan_view_kanban" model="ir.ui.view">
            <field name="name">training_plan</field>
            <field name="model">plan</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="smartest_name"/>
                    <field name="smartest_color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{!selection_mode ? kanban_color(record.smartest_color.raw_value) : ''} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown" t-if="!selection_mode">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown"
                                       href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <ul class="oe_kanban_colorpicker" data-field="smartest_color"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <span class="text-muted o_kanban_record_subtitle">
                                            <field name="smartest_plan_id"/>
                                            <![CDATA[&nbsp;]]> | <![CDATA[&nbsp;]]>
                                        </span>
                                    </div>
                                    <div>
                                        <strong class="o_kanban_record_title">
                                            <h3>
                                                <field name="smartest_name"/>
                                            </h3>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="o_kanban_inline_block">
                                            <field name="smartest_start_date"/>
                                            <field name="smartest_end_date"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="training_plan_action_window">
            <field name="name">Plan Window</field>
            <field name="res_model">plan</field>
            <field name="view_mode">kanban,form</field>
        </record>




    </data>
</odoo>