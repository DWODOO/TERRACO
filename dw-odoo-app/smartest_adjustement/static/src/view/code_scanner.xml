<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="inventory_code_scanner">
      <div class="o_stock_barcode_main_menu_container o_home_menu_background">
          <div class="o_stock_barcode_main_menu position-relative o_home_menu_background text-dark">
              <form class="p-8">
                  <a href="#" class="o_stock_barcode_menu d-block float-left" onClick="window.history.go(-1)"><i class="fa fa-chevron-left"></i></a>
                  <a href="#" class="o_stock_barcode_menu d-block float-right" onClick="window.location.reload();"><i class="fa fa-refresh"></i></a>
                  <fieldset id="fieldset">
                    <div class="row" style="padding: 12px !important;">
                        <h1 class="text-center text-uppercase text-dark" style="color:#2c3e50;width:100%;padding:16px;">
                            Please Scan Location &amp; Product
                        </h1>
                    </div>
                       <div class="d-flex justify-content-center" style="padding:16px;">

                        <div class="select col-6">
                            <p name="p_id" id="p_id" style="color: lime;">
                                Welcome!
                            </p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center" style="padding:g;">
                        <span class="select col-6">Inventory Adjustment</span>
                        <div class="select col-6">
                            <select name="inventory_id" id="inventory_id" class="o_inventory_id">
                                <option></option>
                            </select>
                        </div>
                    </div>
                      <div class="d-flex justify-content-center" style="padding:16px;">
                        <span class="select col-6">Methode</span>
                        <div class="select col-6">
                            <select name="methods" id="methods" class="methods" style="visibility : hidden;">
                                <option type="radio"></option>
                                <option type="radio">Téléphone</option>
                                <option type="radio">Scanner</option>
                            </select>
                        </div>
                  </div>
<!--                    <div class="d-flex justify-content-center" style="padding:16px;">-->
<!--                        <span class="select col-6">Product</span>-->
<!--                        <div class="select col-6">-->
<!--                            <select name="equipment" id="equipment" class="o_operation_id" style="visibility : hidden;">-->
<!--                                <option></option>-->
<!--                            </select>-->
<!--                        </div>-->
<!--                    </div>-->
<!--                  <div class="d-flex justify-content-center" style="padding:16px;">-->
<!--                      <span class="select col-6">equipment</span>-->
<!--                        <div class="select col-6">-->
<!--                            <select name="workcenter_id" id="workcenter_id" class="o_workcenter_id" style="visibility : hidden;">-->
<!--                                <option></option>-->
<!--                            </select>-->
<!--                        </div>-->
<!--                    </div>-->

                      <div class="d-flex justify-content-center" style="padding:16px;">
                      <span class="select col-6">Location</span>
                        <div class="select col-6">
                            <input name="location_id" id="location_id" class="o_location_id o_home_menu_background" style="visibility : hidden;"
                                   readonly="True" value="default_value_location_id"/>

                        </div>
                    </div>

                      <div class="d-flex justify-content-center" style="padding:16px;">
                      <span class="select col-6">Product</span>
                        <div class="select col-6">
                            <input name="product_id" id="product_id" class="o_product_id o_home_menu_background" style="visibility : hidden;"
                                   readonly="True" value="default_value_product_id">
                                <option></option>
                            </input>
                        </div>
                    </div>

                      <div class="d-flex justify-content-center" style="padding:16px;">
                      <span class="select col-6">Count</span>
                        <div class="select col-6">
                            <input name="count_id" id="count_id" class="o_count_id o_home_menu_background"  style="visibility : hidden;">
                                <option></option>
                            </input>
                        </div>
                    </div>

                  </fieldset>
                </form>
                <button class="btn btn-primary o_stock_mobile_barcode" id="o_stock_mobile_barcode" style="visibility : hidden;"><i class="fa fa-camera fa-2x o_mobile_barcode_camera"></i> Tap to scan</button>
                <button class="btn btn-primary o_validate_count" id="o_validate_count" style="visibility : hidden;">Validate</button>
              <div class="d-flex justify-content-center" style="padding:16px;">
                      <span class="select col-6" id="o_input_label" style="visibility : hidden;">Serial Number</span>
                        <input id="o_input" class="o_input o_home_menu_background" type="text" style="visibility : hidden;"/>
                </div>
                <span class="d-flex justify-content-center"  id="o_items"></span>
          </div>
      </div>
    </t>

</templates>


