<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View    -->
    <record id="smartest_message_reason_view_form" model="ir.ui.view">
        <field name="name">smartest.message.reason.form.view</field>
        <field name="model">smartest.message.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>

                            <field name="name" required="1"/>
                        </group>
                        <group>

                            <field name="smartest_is_reject"/>
                        </group>

                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!--    Tree View    -->

    <record id="smartest_message_reason_view_tree" model="ir.ui.view">
        <field name="name">smartest.message.reason.view.tree</field>
        <field name="model">smartest.message.reason</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="smartest_is_reject"/>
            </tree>
        </field>
    </record>

    <!--    Action    -->
    <record id="smartest_message_reason_action_form" model="ir.actions.act_window">
        <field name="name">Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">smartest.message.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Reason
            </p>
        </field>
    </record>
<!--    menu-->
    <menuitem id="menu_message_reason" name="Reasons" action="base_tier_validation.smartest_message_reason_action_form"
              parent="base_tier_validation.menu_tier_confirmation" sequence="5"/>
</odoo>