<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="cnas_payroll_journal_form" model="ir.ui.view">
        <field name="name">cnas.payroll.journal.wizard</field>
        <field name="model">cnas.payroll.journal</field>
        <field name="arch" type="xml">
            <form string="CNAS payroll journal">
                <group>
                    <field name="payslip_run_id" required="1"/>
                </group>
                <group>
                    <label for="date_start" string="Period"/>
                    <div>
                        <field name="date_start" class="oe_inline"/> - <field name="date_end" class="oe_inline"/>
                    </div>
                </group>
                <field name="employee_ids" />
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cnas_payroll_journal_wizard" model="ir.actions.act_window">
        <field name="name">CNAS payroll journale</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cnas.payroll.journal</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cnas_payroll_journal_form"/>
        <field name="target">new</field>

    </record>


    <menuitem id="hr_cnas_payroll_journal"
              parent="hr_payroll.menu_hr_payroll_report"
              name="Detailed Payroll journal"
              action="cnas_payroll_journal_wizard"
              sequence="30"/>


</odoo>
