<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_payslip_run_other_entries_view_form" model="ir.ui.view">
            <field name="name">hr.payslip.run.other.entries.form.view</field>
            <field name="model">hr.payslip.run.other.entries</field>
            <field name="arch" type="xml">
                <form string="Add Entries to payslips">
                    <sheet>
                        <h1>
                            <field name="slip_run_id" readonly="1"/>
                        </h1>
                        <div>
                            <group col="6">
                                <field name="types" required="1"/>
                            </group>
                            <group col="6">
                                <field name="compute_condition" required="1"/>
                            </group>
                        </div>
                        <group>
                            <group col="3">
                                <field name="department_id" attrs="{'invisible': [('types', '=', 'all')]}"/>
                            </group>
                            <group col="3">
                                <field name="employee_ids" widget="many2many_tags" attrs="{'invisible': [('types', '!=', 'employees')]}"/>
                            </group>
                            <group col="3">
                                <field name="quantity" attrs="{'invisible': [('compute_condition', '!=', 'condition')], 'required': [('compute_condition', '=', 'condition')]}"/>
                            </group>
                        </group>
                        <field name="input_line_ids" colspan="4" nolabel="1">
                            <tree string="Input Data" editable="bottom">
                                <!--
                                    Required 0 to force client to send on change request even when not defined
                                    Salary Attachments would otherwise not properly be computed and payslip_id is
                                    required for _allowed_input_type_ids to work..
                                -->
                                <!--                                <field name="payslip_id" invisible="1" required="0"/>-->
                                <field name="compute_condition" invisible="1"/>
                                <field name="input_type_id" required="1"/>
                                <field name="salary_rule_id" attrs="{'invisible': [('compute_condition', '!=', 'condition')], 'required': [('compute_condition', '=', 'condition')]}"/>
                                <field name="amount" attrs="{'invisible': [('compute_condition', '!=', 'amount')], 'required': [('compute_condition', '=', 'amount')]}"/>
                                <field name="sequence" invisible="True"/>
                            </tree>
                            <form string="Payslip Line">
                                <group col="4">
                                    <field name="input_type_id"/>
                                    <field name="salary_rule_id"/>
                                    <field name="sequence"/>
                                    <field name="amount"/>
                                </group>
                            </form>
                        </field>
                    </sheet>
                    <footer>
                        <button name="action_validate_entries" string="Validate" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>