<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_additional_working_hours_form" model="ir.ui.view">
        <field name="name">hr.additional.working.hours.form</field>
        <field name="model">hr.additional.working.hours</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            states="draft"
                            class="oe_highlight"
                            groups="hr_payroll.group_hr_payroll_user"/>
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            states="confirmed"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <button name="action_draft"
                            string="Make as draft"
                            type="object"
                            states="cancelled"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field name="date_from" class="oe_inline"/>
                                -
                                <field name="date_to" class="oe_inline"/>
                            </div>
                        </group>
                        <group>
                            <field name="limit" groups="hr_payroll.group_hr_payroll_manager"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="department_id"/>
                        </group>
                    </group>
                    <group string="Hours">
                        <field name="additional_hours_line_ids" nolabel="1">
                            <form>
                                <group col="4">
                                    <field name="employee_id"/>
                                    <field name="h50" sum="Total 50%"/>
                                    <field name="h75" sum="Total 75%"/>
                                    <field name="h100" sum="Total 100%"/>
                                    <field name="total" sum="Total"/>
                                </group>
                            </form>
                            <tree editable="bottom">
                                <field name="employee_id"/>
                                <field name="h50" sum="Total 50%"/>
                                <field name="h75" sum="Total 75%"/>
                                <field name="h100" sum="Total 100%"/>
                                <field name="total" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           widget="mail_followers"
                           groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="hr_additional_working_hours_tree" model="ir.ui.view">
        <field name="name">hr.additional.working.hours.tree</field>
        <field name="model">hr.additional.working.hours</field>
        <field name="arch" type="xml">
            <tree string="Additional Hours"
                  decoration-muted="state == 'canceled'"
                  decoration-warning="state == 'draft'"
                  decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="department_id"/>
                <field name="company_id"
                       groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hr_payroll.menu_hr_payroll_payslips" model="ir.ui.menu">
        <field name="sequence">65</field>
    </record>

    <menuitem id="hr_divers_menu"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
              name="Divers"
              sequence="70"
              groups="hr_payroll.group_hr_payroll_manager"/>
    <record model="ir.actions.act_window" id="hr_additional_working_hours_action">
        <field name="name">Additional working hours</field>
        <field name="res_model">hr.additional.working.hours</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click on create button to add employees additional working hours.
            </p>
            <p>
                Additional working hours will be used on payslip computation.
            </p>
        </field>
    </record>

    <menuitem id="hr_additional_working_hours_menu"
              parent="l10n_dz_payroll.hr_divers_menu"
              name="Additional working hours"
              sequence="10"
              action="hr_additional_working_hours_action"/>

</odoo>
