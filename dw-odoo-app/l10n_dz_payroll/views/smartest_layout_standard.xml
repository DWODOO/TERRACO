<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_smartest_layout_standard">


        <div class="header">
            <div class="row">

                <div class="col-6" name="company_address">
                   <h3> <strong> <span t-field="company.name"/></strong></h3>
                   <strong><span t-field="company.street"/></strong> <br/>
                    <strong><span t-field="company.street2"/></strong> <br/>
                    <span> N° Employeur: </span> <strong><span t-field="company.company_registry"/></strong>
                </div>

                <div class="col-2">
                </div>

                 <div class="col-4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;"
                         alt="Logo"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">

                <span> Pour vous aider à fair valoir vos droits, conserver ce bulletin de paie sans limitation de durée.</span>


            </div>
        </div>


    </template>
</odoo>
