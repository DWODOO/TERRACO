<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_payroll_dz_loan_form" model="ir.ui.view">
        <field name="name">hr.loan.form</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object"
                            name="action_compute_refund_board"
                            string="Compute refund lines"
                            states="draft"
                            class="oe_highlight"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            states="draft"
                            class="oe_highlight"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <button name="action_draft"
                            string="Make as draft"
                            type="object"
                            states="confirmed"
                            groups="hr_payroll.group_hr_payroll_manager"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,paid, cancel"/>
                </header>
                <sheet>
                    <label for="name" class="oe_edit_only"/>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="company_currency_id" invisible="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="date_loan"/>

                            <field name="type" widget="radio"/>
                        </group>
                        <group>
                            <field name="amount_loan"/>
                            <label for="refund_amount" string="Refund"/>
                            <div>
                                <field name="refund_amount" class="oe_inline"/>
                            </div>

                            <label for="refund_months" string="Every"/>
                            <div>
                                <field name="refund_months" class="oe_inline"/>
                                <span> Month(s)</span>
                            </div>

                            <label for="refund_months" string="From"/>
                            <div>
                                <field name="date_refund" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <group string="Refund lines">
                        <field name="loan_line_ids" nolabel="1">
                            <form>
                                <group col="4">
                                    <field name="sequence"/>
                                    <field name="date"/>
                                    <field name="payment_state"/>
                                    <field name="refund_amount"/>
                                    <field name="date_refund"/>
                                </group>
                            </form>
                            <tree editable="bottom"
                                  decoration-info="payment_state == 'closed'"
                                  decoration-muted="payment_state == 'canceled'"
                                  decoration-warning="payment_state == 'waiting'"
                                  decoration-success="payment_state == 'paid'"
                                  decoration-danger="payment_state == 'postponed'">
                                <field name="sequence" invisible="1"/>
                                <field name="date"/>
                                <field name="payment_state"/>
                                <field name="payslip_id"/>
                                <field name="refund_amount"/>
                                <field name="date_refund" invisible="1"/>
                                <button name="action_postpone"
                                        class="oe_stat_button"
                                        icon="fa-arrows-v"
                                        string="Reporter"
                                        type="object"
                                        groups="hr_payroll.group_hr_payroll_manager"/>
                            </tree>
                        </field>
                    </group>
                    <group class="oe_subtotal_footer oe_right" states="confirmed">
                        <field name="amount_loan" readonly="1" force_save="1"/>
                        <field name="amount_refunded"/>
                        <field name="amount_refund_remaining" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="hr_payroll_dz_loan_tree" model="ir.ui.view">
        <field name="name">hr.loan.tree</field>
        <field name="model">hr.loan</field>
        <field name="arch" type="xml">
            <tree string="Loan list"
                  decoration-info="state == 'draft'"
                  decoration-muted="state == 'canceled'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'paid'">
                <field name="employee_id"/>
                <field name="name"/>
                <field name="date_loan"/>
                <field name="type"/>
                <field name="amount_loan"/>
                <field name="refund_amount"/>
                <field name="amount_refunded"/>
                <field name="amount_refund_remaining"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_loan_action">
        <field name="name">Wages Loans/Advances</field>
        <field name="res_model">hr.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click on create button to add employees loans/advances on their salaries.
            </p>
            <p>
                Wage loans/advances will be used on payslip computation.
            </p>
        </field>
    </record>

    <menuitem id="hr_payroll_dz_loan_menu"
              parent="l10n_dz_payroll.hr_divers_menu"
              action="hr_loan_action"
              sequence="20"
              groups="hr_payroll.group_hr_payroll_manager"/>

</odoo>
