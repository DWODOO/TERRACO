        <xpath expr="//div[hasclass('page')]//h2[1]" position="replace">
            <h2 t-if="o.state in ['draft','sent', 'to approve']">Bon de commande N° <span t-field="o.name"/></h2>
        </xpath>

        <xpath expr="//div[hasclass('page')]//h2[2]" position="replace">
            <h2 t-if="o.state in ['purchase', 'done']">Bon de commande N° <span t-field="o.name"/></h2>
        </xpath>

        <xpath expr="//div[hasclass('page')]//h2[3]" position="replace">
            <h2 t-if="o.state == 'cancel'">Bon de commande Annulé N° <span t-field="o.name"/></h2>
        </xpath>

        <xpath expr="//th[@name='th_date_req']" position="replace"/>

        <xpath expr="//table[hasclass('o_main_table')]//tbody//t[2]//tr//t[1]//td[3]" position="replace"/>

        <xpath expr="//div[@name='purchase_shipping_address']" position="attributes">
