                    <p class="text-center"><b>DIRECTION GENERALE</b></p>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']//div[1]" position="attributes">
            <attribute name="class">col-3 bm-2 d-none</attribute>
        </xpath>

        <xpath expr="//div[@id='informations']" position="inside">
