<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="smartest_purchase_order_tree" model="ir.ui.view">
        <field name="name">smartest.purchase.order.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="payment_method_id" optional="hide"/>
                <field name="apply_stamp_duty_tax" optional="hide"/>
            </field>
            <field name="amount_total" position="before">
                <field name="amount_total_with_tva" optional="hide"/>
                <field name="amount_stamp_tax" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">smartest.purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="attributes">
                <field name="options">{'no_create': False}</field>
            </field>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="create_uid" string="Buyer Code"/>
                <field name="order_type"/>
                <field name="create_invoice_visible" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="currency_rate_import_purchase" string="Currency Rate" force_save="1"/>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][1]" position="attributes">
                <attribute name="attrs">{'invisible': [('create_invoice_visible', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_create_invoice'][2]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="context">{'res_partner_search_mode': 'supplier', 'show_vat': True,'default_is_supplier': True}</attribute>
            </xpath>
            <div name="reminder" position="after">
                <field name="payment_method_id"/>
            </div>
<!--            <xpath expr="//group[hasclass('oe_subtotal_footer')]//field[@name='tax_totals_json']" position="after">-->
<!--                <field name="apply_stamp_duty_tax" invisible="1"/>-->
<!--                <field name="amount_stamp_tax" force_save="1"-->
<!--                       attrs="{'invisible': [('apply_stamp_duty_tax', '=', False)]}"/>-->
<!--            </xpath>-->
        </field>
    </record>
</odoo>
