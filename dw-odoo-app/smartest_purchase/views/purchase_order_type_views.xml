<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View    -->
    <record id="purchase_order_type_view_form" model="ir.ui.view">
        <field name="name">purchase_order_type_view_form</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

     <!--    Tree View    -->

    <record id="purchase_order_type_view_tree" model="ir.ui.view">
        <field name="name">purchase_order_type_view_tree</field>
        <field name="model">purchase.order.type</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

      <!--    Action    -->
    <record id="purchase_order_type_action_form" model="ir.actions.act_window">
        <field name="name">Purchase Order Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new purchase order type!
            </p>
        </field>
    </record>
</odoo>