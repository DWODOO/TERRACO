<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_brand_form">
        <field name="name">res.brand.form</field>
        <field name="model">res.brand</field>
        <field name="arch" type="xml">
            <form string="Brand">
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook colspan="4">
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="partner_id" attrs="{'invisible': [('id', '=', False)], 'required': [('id', '=', True)]}"/>
                                </group>
                                <group>
                                    <field name="sequence"/>
                                    <field name="id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_brand_search" model="ir.ui.view">
        <field name="name">res.brand.search</field>
        <field name="model">res.brand</field>
        <field name="arch" type="xml">
            <search string="Res Brand">
                <field name="name"/>
                <field name="sequence"/>
            </search>
        </field>
    </record>

    <record id="view_brand_list" model="ir.ui.view">
        <field name="name">res.brand.list</field>
        <field name="model">res.brand</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="partner_id" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id='view_brand_kanban' model='ir.ui.view'>
        <field name="name">res.brand.kanban</field>
        <field name="model">res.brand</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette oe_semantic_html_override oe_kanban_global_click">
                            <a type="open" href="#" class="o_kanban_image oe_kanban_action">
                                <img alt="Open" t-att-src="kanban_image('res.brand', 'logo', record.id.raw_value)" class="img-fluid" style="width:100px;"/>
                            </a>
                            <div class="oe_kanban_details">
                                <h4 class="oe_partner_heading">
                                    <a type="open" class="o_kanban_record_title">
                                        <field name="name"/>
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_brand_view" model="ir.actions.act_window">
        <field name="name">Brands</field>
        <field name="res_model">res.brand</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Brand
            </p>
            <p>
                Simply with this easy interface you can create a new Brands.
            </p>
        </field>
    </record>

    <menuitem action="action_brand_view" id="menu_action_res_brand" parent="base.menu_users"/>
</odoo>
