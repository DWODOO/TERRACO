<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="detaille_client_form" model="ir.ui.view">
            <field name="name">detaill.client.wizard</field>
            <field name="model">detaill.client.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <p>This wizard allow you to print a full detail about all your clients please enter Date</p>
                            <field name="date_year_id" required="1"/>
                        </group>

                        <footer>
                            <button name="%(action_report_res_partner)d" icon="fa-print" string="Print" class="btn-primary" type="action"/>
                            <button special="cancel" string="Cancel" class="btn-secondary"/>
<!--                            <button name="test" string="test" type="object" class="btn-secondary"/>-->
                        </footer>
                    </group>
                </form>
            </field>
        </record>

        <record id="detaille_client_action" model="ir.actions.act_window">
            <field name="name">Etat detaill clients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">detaill.client.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="detaille_client_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id ="detaille_client_menu" name="Etat detaill clients" parent="account.menu_finance_reports" sequence="20" action="detaille_client_action"/>
    </data>
</odoo>