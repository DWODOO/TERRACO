<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="external_layount_extnd" inherit_id="web.external_layout_standard">
	<xpath expr="//div[1]" position="replace">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
              <t t-foreach="docs" t-as="o">
                    <t t-if='o._name == "detaill.client.wizard"'>
                          <div class="row">
                              <div class="column" style="width: 20%;">
                                  <td><p style="font-size: x-small;">DESIGNATION  DE  L'ENTREPRISE</p></td>
                                    <t t-foreach="request.env['res.company'].search([], limit=1)" t-as="company">
                                          <td style="text-align : left;font-size: 12px;"><span class="font-weight-bold" t-field="company.name"/></td><br/>
                                          <td style="text-align : left;font-size: 12px;"><span t-field="company.street"/></td>
                                        <br/>
                                    </t>
                                  <td style="text-align : left;font-weight : bold;font-size: 12px;"><br/> ANNEE<span t-field="docs.date_year_id" t-options="{&quot;format&quot;: &quot;  yyyy&quot;}"/></td>
                              </div>
                              <div class="column" style="width: 80%;">
                                  <h1 style="text-align:right; letter-spacing: 4px;font-family: 'Oswald', monospace;letter-spacing: 9px;font-weight: bold; padding-right: 50px;">ETAT DETAILLE DES CLIENTS</h1>
                              </div>
                          </div>
                    </t>
              </t>
        </div>
    </xpath>
    </template>
</odoo>