<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Settings View        -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="999"/>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']//div[hasclass('o_settings_container')][2]" position="inside">
                   <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('group_discount_per_so_line', '=', False)]}">
                           <div class="o_setting_left_pane">
                               <field name="use_discount_accounting"/>
                           </div>
                           <div class="o_setting_right_pane">
                               <label for="use_discount_accounting"/>
                               <div class="text-muted">
                                   Accounting the discount amount in different account.
                               </div>
                           </div>
                           <div class="o_setting_right_pane">
                               <field name="discount_account_id" attrs="{'required': [('use_discount_accounting', '=', True)], 'invisible': [('use_discount_accounting', '=', False)]}"/>
                           </div>
                       </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
