<?xml version="1.0"?>
<odoo>
    <record id="smartest_view_product_landed_cost_form_inherit" model="ir.ui.view">
        <field name="name">smartest.product.template.landed.cost.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock_landed_costs.view_product_landed_cost_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="smartest_product_last_cost"/>
            </xpath>

            <xpath expr="//group[@name='purchase']" position="after">
                <group string="Clearance" attrs="{'invisible':[('type', '!=', 'product')]}"
                       groups="stock.group_stock_manager">
                    <field name="hs_code_id"/>
                    <label for="hs_code_rate" attrs="{'invisible': [('hs_code_id', '=', False)]}"/>
                    <div attrs="{'invisible': [('hs_code_id', '=', False)]}">
                        <field name="hs_code_rate" class="oe_inline" style="vertical-align:baseline"/> %
                    </div>
                </group>
            </xpath>
        </field>
    </record>

    <record id="smartest_view_product_landed_cost_tree_inherit" model="ir.ui.view">
        <field name="name">smartest.product.template.landed.cost.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='standard_price']" position="after">
                <!--                <group>-->
                <!--                <div>-->

                <field name="smartest_product_last_cost" readonly="True"/>
                <!--                </div>-->
                <!--                </group>-->

            </xpath>
        </field>
    </record>
</odoo>