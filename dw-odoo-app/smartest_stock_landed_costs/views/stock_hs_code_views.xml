<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_hs_code_tree_view" model="ir.ui.view">
            <field name="name">stock.hs.code.tree</field>
            <field name="model">stock.hs.code</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="percentage"/>
                </tree>
            </field>
        </record>


        <record id="action_stock_hs_code" model="ir.actions.act_window">
            <field name="name">HS Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.hs.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create new HS Code
                </p>
            </field>
        </record>

        <menuitem id="smartest_stock_hs_code"
                  name="HS Code"
                  parent="stock.menu_product_in_config_stock"
                  sequence="99"
                  action="action_stock_hs_code"/>
    </data>
</odoo>