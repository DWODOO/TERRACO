<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_purchase_order_inherit_import_folder_form" model="ir.ui.view">
        <field name="name">purchase.order.inherit_purchase_folder.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="open_import_opening_request" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible':[('opening_request_count', '=', 0)]}">
                    <field name="opening_request_count" widget="statinfo" string="Import Opening Requests"/>
                </button>
            </xpath>
            <xpath expr="//button[@name='button_done']" position="after">
                <button name="create_import_file" type="object" string="Import Opening Request" attrs="{'invisible': [('state','not in', ['purchase','done'])]}"/>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="purchase_folder_import_id" attrs="{'readonly': [('state','not in',['draft','sent'])]}"/>
            </xpath>
        </field>
    </record>


    <record id="view_account_move_inherit_import_folder_form" model="ir.ui.view">
        <field name="name">account.move.inherit_purchase_folder.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="purchase_folder_import_id" attrs="{'readonly': [('state','!=','draft')],'invisible': [('move_type','!=','in_invoice')]}"/>
            </xpath>
        </field>
    </record>
</odoo>