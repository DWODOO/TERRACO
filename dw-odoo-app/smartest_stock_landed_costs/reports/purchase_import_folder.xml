<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="smartest_stock_landed_costs.purchase_import_folder_document">
        <t t-call="web.html_container">
            <t t-set="company" t-value="res_company"/>
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: serif; font-size: 15px;margin-top:none">
                        <div class="text-center"><h1 class="font-weight-bold">Folder : <span t-field="o.name"/> </h1></div>
                        <br/>
                        <div class="row">
                            <div class="text-left col-6">
                                <span style="display:inline;"><strong>Date : </strong></span>
                                <span style="display:inline;" t-field="o.date"/>
                            </div>
                            <div class="text-left col-6">
                                <span style="display:inline;"><strong>Societe : </strong></span>
                                <span style="display:inline;" t-field="o.company_id"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-left col-12">
                                <strong>Commandes : </strong>
                                <span t-esc="o.purchase_order_ids.mapped('name')"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-left col-12">
                                <strong>Receptions : </strong>
                                <span t-esc="o.purchase_picking_ids.mapped('name')[:]"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-left col-12">
                                <strong>Import File(s) : </strong>
                                <span t-esc="o.comex_import_file_ids.mapped('name')[:]"/>
                            </div>
                        </div>
                        <br/>
                        <div class="text-center"><h4>Supplier Invoice(s)</h4></div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Invoice</th>
                                    <th>State</th>
                                    <th>Payment State</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.vendor_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.invoice_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.invoice_state"/>
                                        </td>
                                        <td>
                                            <span t-field="line.payment_state"/>
                                        </td>
                                        <td>
                                            <span t-field="line.amount_total"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <div class="text-center"><h4>Fees Invoice(s)</h4></div>
                        <t t-set="total_fees" t-value="0"/>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Invoice</th>
                                    <th>State</th>
                                    <th>Payment State</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.fees_line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.invoice_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.invoice_state"/>
                                        </td>
                                        <td>
                                            <span t-field="line.payment_state"/>
                                        </td>
                                        <td>
                                            <span t-field="line.amount_total"/>
                                            <t t-set="total_fees" t-value="total_fees + line.amount_total"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="text-right" style="marging-right:20px;">
                            <strong>Total Fees Invoice(s) : </strong>
                            <span t-esc="total_fees"/>
                        </div>
                        <br/>
                    </div>
                </t>
            </t>
        </t>

    </template>



    <record id="smartest_cash_statement_report_action" model="ir.actions.report">
        <field name="name">Import Folder</field>
        <field name="model">purchase.import.folder</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">smartest_stock_landed_costs.purchase_import_folder_document</field>
        <field name="report_file">smartest_stock_landed_costs.purchase_import_folder_document</field>
        <field name="print_report_name">'Dossier Import - %s' % (object.name)</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_purchase_import_folder"/>
    </record>
</odoo>