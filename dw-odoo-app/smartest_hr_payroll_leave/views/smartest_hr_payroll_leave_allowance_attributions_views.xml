<?xml version="1.0"?>
<odoo>
    <data>
        <record id="smartest_hr_payroll_leave_allowance_attributions_tree_view" model="ir.ui.view">
            <field name="name">smartest.hr.payroll.leave.allowance.attributions.tree</field>
            <field name="model">smartest.hr.payroll.leave.allowance.attributions</field>
            <field name="arch" type="xml">
                <tree string="Allowance Leave Attribution Plan" create="0" delete="0">
                    <field name="name"/>
                    <field name="smartest_payslip_id" optional="hide"/>
                    <field name="smartest_holiday_allocation_id" optional="hide"/>
                    <field name="smartest_leave_id"/>
                    <field name="smartest_employee_id"/>
                    <field name="smartest_request_date_from"/>
                    <field name="smartest_request_date_to"/>
                    <field name="smartest_days_attributed" sum="Total"/>
                    <field name="smartest_leave_allowance_attributed" sum="Total"/>
                    <field name="smartest_leave_id_state"/>
                </tree>
            </field>
        </record>
        <record id="smartest_hr_payroll_leave_allowance_attributions_search" model="ir.ui.view">
            <field name="name">smartest.hr.payroll.leave.allowance.attributions.select</field>
            <field name="model">smartest.hr.payroll.leave.allowance.attributions</field>
            <field name="arch" type="xml">
                <search string="Search Allowance Leave Plan">
                    <field name="smartest_employee_id" string="Employee"/>
                    <field name="smartest_payslip_id" string="Payslip"/>
                    <field name="smartest_holiday_allocation_id" string="Leave"/>
                    <field name="payroll_leave_id" string="Allowance Leave"/>

                    <group expand="0" string="Group By...">

                        <filter string="Employee" name="employee_id" domain="[]"
                                context="{'group_by': 'smartest_employee_id'}"/>
                        <filter string="Payslip" name="payslip_id" domain="[]"
                                context="{'group_by': 'smartest_payslip_id'}"/>
                        <filter string="Leave" name="holiday_status_id" domain="[]"
                                context="{'group_by': 'smartest_holiday_allocation_id'}"/>
                        <filter string="Allowance Leave" name="payroll_leave" domain="[]"
                                context="{'group_by': 'payroll_leave_id'}"/>
                        <filter name="owner" string="Owner" domain="[]" context="{'group_by':'create_uid'}"/>
                        <filter string="Creation Date" name="creation_month" domain="[]"
                                context="{'group_by':'create_date'}"/>
                        <filter name="smartest_date_start" string="Exercice Start Date" icon="fa-calendar" domain="[]"
                                context="{'group_by':'smartest_date_start_exercice'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="act_allowance_attributions_smartest_hr_payroll_leave_allowance" model="ir.actions.server">
            <field name="name">Leave Allowance Attrbutions Analysis</field>
            <field name="model_id"
                   ref="smartest_hr_payroll_leave.model_smartest_hr_payroll_leave_allowance_attributions"/>
            <field name="binding_model_id" ref="smartest_hr_payroll_leave.model_smartest_hr_payroll_leave_allowance"/>
            <field name="state">code</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
            <field name="code">action = model.action_leave_allowance_attributions_analysis()</field>
        </record>
    </data>
</odoo>
