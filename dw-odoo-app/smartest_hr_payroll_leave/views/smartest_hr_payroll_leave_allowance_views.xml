<?xml version="1.0"?>
<odoo>
    <data>

        <record id="smartest_hr_payroll_leave_allowance_tree_view" model="ir.ui.view">
            <field name="name">smartest.hr.payroll.leave.allowance.tree</field>
            <field name="model">smartest.hr.payroll.leave.allowance</field>
            <field name="arch" type="xml">
                <tree string="Allowance Leave Plan">
                    <field name="smartest_company_id" groups="base.group_multi_company" readonly="1"/>
                    <field name="smartest_employee_id"/>
                    <field name="smartest_date_start_exercice"/>
                    <field name="smartest_date_end_exercice"/>
                    <field name="smartest_days_leave_attribution_exercice" sum="Total"/>
                    <field name="smartest_given_days_leave_attribution_exercice" optional="hide" sum="Total"/>
                    <field name="smartest_remaining_days_leave_attribution_exercice" sum="Total"/>
                    <field name="smartest_leave_allowance_exercice" sum="Total"/>
                    <field name="smartest_given_leave_allowance_exercice" optional="hide" sum="Total"/>
                    <field name="smartest_remaining_leave_allowance_exercice" sum="Total"/>
                </tree>
            </field>
        </record>
        <record id="smartest_hr_payroll_leave_allowance_form_view" model="ir.ui.view">
            <field name="name">smartest.hr.payroll.leave.allowance.form</field>
            <field name="model">smartest.hr.payroll.leave.allowance</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="payslips_count" invisible="1"/>
                        <field name="allowance_count" invisible="1"/>
                        <field name="days_count" invisible="1"/>
                        <div name="button_box" class="oe_button_box" attrs="{'invisible': [('id', '=', False)]}">
                            <button name="%(act_hr_payslip_smartest_hr_payroll_leave_allowance)d"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-list"
                                    context="{'search_default_employee_id': active_id}"
                                    groups="base.group_user"
                                    help="Payslips">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="payslips_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Payslip(s)
                                    </span>
                                </div>
                            </button>
                            <button name="%(act_allowance_attributions_smartest_hr_payroll_leave_allowance)d"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-money"
                                    groups="base.group_user"
                                    help="Attributions">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="allowance_count"/> DA<br/>
                                        <field name="days_count"/> Days
                                    </span>
                                    <span class="o_stat_text">
                                        Attributions
                                    </span>
                                </div>
                            </button>

                        </div>

                        <group string="Allowance Leave Plan">
                            <group>
                                <field name="smartest_company_id" groups="base.group_multi_company" readonly="1"/>
                                <field name="smartest_employee_id" />

                            </group>
                            <group>
                                <label for="smartest_date_start_exercice" string="From"/>
                                <div class="oe_row">
                                    <field name="smartest_date_start_exercice" no_label="1"/>
                                    <label for="smartest_date_end_exercice" string=" To"/>
                                    <field name="smartest_date_end_exercice" no_label="1" readonly="1" force_save="1"/>
                                </div>
                                <field name="smartest_active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Leave Allowance Per Exercice" name="exercice_leave_allowance">
                                <group>
                                    <group>
                                        <field name="smartest_leave_allowance_exercice"/>
                                        <br/>
                                    </group>
                                    <group>
                                        <field name="smartest_remaining_leave_allowance_exercice"/>
                                        <br/>
                                    </group>
                                </group>

                                <group>
                                    <group>
                                        <field name="smartest_days_leave_attribution_exercice"/>
                                        <br/>
                                    </group>
                                    <group>
                                        <field name="smartest_remaining_days_leave_attribution_exercice"/>
                                        <br/>
                                    </group>
                                </group>
                            </page>
                            <page string="Leave Allowance Per Month" name="monthly_leave_allowance">
                                <field name="smartest_allowance_leave_ids" nolabel="1" widget="one2many" mode="tree">
                                    <tree string="Bank Accounts" create="false" editable="bottom">
                                        <field name="smartest_company_currency" invisible="1"/>
                                        <field name="smartest_date_start"/>
                                        <field name="smartest_date_end"/>
                                        <field name="smartest_payslip_id" optional="hide"/>
                                        <field name="smartest_days_leave_attribution"/>
                                        <field name="smartest_leave_allowance"/>
                                        <field name="smartest_active" widget="boolean_toggle" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="smartest_hr_payroll_leave_allowance_search" model="ir.ui.view">
            <field name="name">smartest.hr.payroll.leave.allowance.select</field>
            <field name="model">smartest.hr.payroll.leave.allowance</field>
            <field name="arch" type="xml">
                <search string="Search Allowance Leave Plan">
                    <field name="smartest_employee_id" string="Employee"/>

                    <filter name="smartest_active" string="Active" domain="[('smartest_active','!=', False)]"
                            invisible="1"
                            help="Active Leave Allowance"/>
                    <filter string="Archived" name="inactive" domain="[('smartest_active', '=', False)]"
                            help="Archived Leave Allowance"/>
                    <group expand="0" string="Group By...">

                        <filter string="Employee" name="employee_id" domain="[]"
                                context="{'group_by': 'smartest_employee_id'}"/>
                        <filter name="owner" string="Owner" domain="[]" context="{'group_by':'create_uid'}"/>
                        <filter string="Creation Date" name="creation_month" domain="[]"
                                context="{'group_by':'create_date'}"/>
                        <filter string="Company" name="company" domain="[]" context="{'group_by':'smartest_company_id'}"
                                groups="base.group_multi_company"/>
                        <filter name="smartest_date_start" string="Start Date" icon="fa-calendar" domain="[]"
                                context="{'group_by':'smartest_date_start_exercice'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="smartest_hr_payroll_leave_allowance_action">
            <field name="name">Allowance Leave Plan</field>
            <field name="res_model">smartest.hr.payroll.leave.allowance</field>
            <field name="view_mode">tree,form</field>
            <field name="context">
                {'search_default_employee_id':1,'search_default_smartest_date_start':1,'search_default_smartest_active':
                1}
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    Click on create button to add a new record of the Allowance Leave Plan of the Company.
                </p>
            </field>
        </record>

        <menuitem id="smartest_hr_payroll_leave_allowance_menu"
                  parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
                  action="smartest_hr_payroll_leave_allowance_action"
                  sequence="50"/>
    </data>
</odoo>
