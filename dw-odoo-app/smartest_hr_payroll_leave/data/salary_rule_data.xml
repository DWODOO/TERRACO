<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salary_rule_payroll_allowance_leave" model="hr.salary.rule">
            <field name="name">Allowance Leave</field>
            <field name="sequence" eval="22"/>
            <field name="code">R0022</field>
            <field name="category_id" ref="smartest_hr_payroll.contribution_category"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days</field>
            <field name="amount_select">percentage</field>
            <field name="quantity">(worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days)</field>
            <field name="amount_percentage_base">payslip.env['hr.payslip'].payroll_leave_allowance_cumulation(payslip.id)/worked_days.LEGAL_LEAVE.number_of_days</field>
            <field name="amount_percentage" eval="100"/>
            <field name="struct_id" eval="[(5, 0), (4, ref('smartest_hr_payroll.structure_base_dz'))]"/>
            <field name="smartest_date_from" eval="False"/>
            <field name="smartest_perfect_depends">perfect_not_in_dependency</field>
        </record>

    </data>
</odoo>
