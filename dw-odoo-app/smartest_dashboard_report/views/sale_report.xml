<odoo>
    <record id="sale_report_view_dashboard_smartest_inherit" model="ir.ui.view">
        <field name="name">sale.report.view.dashboard_inherited</field>
        <field name="model">sale.report</field>
        <field name="mode">extension</field>
        <field name="inherit_id" ref="sale_enterprise.sale_report_view_dashboard"/>
        <field name="arch" type="xml">
        <xpath expr="//aggregate[@name='lines']" position="replace">
        </xpath>
        <xpath expr="//aggregate[@name='avg_days_to_confirm']" position="replace">
        </xpath>
        <xpath expr="//group/group[2]" position="inside">
                <widget name="pie_chart" title="Order States" attrs="{'groupby': 'invoice_status', 'measure': 'order_id'}"/>
        </xpath>
        </field>

    </record>

    <record id="sale_enterprise.sale_report_action_dashboard" model="ir.actions.act_window">
        <field name="context">{'search_default_Sales': 1, 'search_default_filter_date': 1, 'graph_groupbys': ['date:month'],'graph_mode': 'bar'}</field>
    </record>

</odoo>