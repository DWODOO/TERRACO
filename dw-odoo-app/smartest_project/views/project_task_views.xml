<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="smartest_view_view_task_kanban_inherit">
        <field name="name">smartest.project.task.kanban.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="after">
                <p class="smartest_project_task_key" attrs="{'invisible': [('smartest_task_key', '=', False)]}">
                    #
                    <field name="smartest_task_key"/>
                </p>
                <field name="planned_date_begin" invisible="1"/>
                <field name="planned_date_end" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_view_task_form2_inherit">
        <field name="name">smartest.project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]//h1" position="after">
                <h3 class="smartest_project_task_key" attrs="{'invisible': [('smartest_task_key', '=', False)]}">
                    #
                    <field name="smartest_task_key"/>
                </h3>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="attributes">
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <label for="new_progress"/>
                <div class="o_row">
                    <field name="new_progress"/>
                    <label for="new_progress" string="%"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="smartest_use_sprint" invisible="1"/>
                <field name="team_id" string="Team"/>
                <field name="sprint_ids" widget="many2many_tags" attrs="{'invisible': [('smartest_use_sprint', '=', False)]}"/>
                <field name="type" string="Type"/>
                <field name="difficulty" string="Difficulty" widget="priority"/>
                <field name="user_ids_domain" invisible="1"/>
            </xpath>
            <field name="legend_done" position="after">
                <field name="user_ids_domain" invisible="1"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_view_task_tree2_inherit">
        <field name="name">smartest.project.task.tree.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="smartest_task_key" optional="show"/>
            </field>
            <xpath expr="//field[@name='progress']" position="after">
                <field name="smartest_use_sprint" invisible="1"/>
                <field name="team_id"/>
                <field name="sprint_ids" widget="many2many_tags" attrs="{'invisible': [('smartest_use_sprint', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_view_task_search_form_inherit">
        <field name="name">smartest.project.task.search.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="filter_domain">['|', ('name', 'ilike', self), ('smartest_task_key', 'ilike', self)]
                </attribute>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_view_project_task_graph_inherit">
        <field name="name">smartest.project.task.graph.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_project_task_graph"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="stage_id" type="smartest_dashboard_state"/>
            </field>
        </field>
    </record>

    <record id="smartest_project_task_view_dashboard" model="ir.ui.view">
        <field name="name">smartest.project.task.view.dashboard</field>
        <field name="model">project.task</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <dashboard sample="1">
                <view type="graph" ref="project.view_project_task_graph"/>
                <group>
                    <group>
                        <aggregate name="all_tasks" string="All Tasks" field="id" group_operator="count"
                                   measure="__count__"/>
                        <aggregate name="done_tasks" string="Done Tasks" field="id" group_operator="count"
                                   domain="[('stage_id.smartest_dashboard_state', '=', 'done')]"/>
                        <aggregate name="ongoing_tasks" string="Ongoing Tasks" field="id" group_operator="count"
                                   domain="[('stage_id.smartest_dashboard_state', '=', 'ongoing')]"/>
                    </group>
                    <group col="2">
                        <widget name="pie_chart" title="Task/Stage" attrs="{'groupby': 'stage_id'}"/>
                    </group>
                </group>
            </dashboard>
        </field>
    </record>

    <record id="project.action_project_task_user_tree" model="ir.actions.act_window">
        <field name="view_mode">dashboard,graph,pivot</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'dashboard', 'view_id': ref('smartest_project.smartest_project_task_view_dashboard')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('project.view_task_project_user_graph')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('project.view_task_project_user_pivot')}),
        ]"/>
    </record>
</odoo>
