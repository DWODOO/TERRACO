<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="smartest_sprint_form">
        <field name="name">smartest.sprint.form</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                    <button name="button_start_sprint" string="Start" type="object" class="oe_highlight oe_read_only"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="button_close_sprint" string="Start" type="object"
                            attrs="{'invisible': [('state', '!=', 'ongoing')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <div class="o_stat_info">
                                <field name="tasks_count" class="o_stat_value"/>
                                <span class="o_stat_text"> Tasks</span>
                            </div>
                        </button>
                        <button name="action_view_done_tasks" type="object" states="ongoing" class="oe_stat_button"
                                icon="fa-line-chart">
                            <div class="o_stat_info">
                                <div class="o_row o_stat_value">
                                    <field name="tasks_done_rate" class="o_stat_value"/>
                                    <span> %</span>
                                </div>
                                <span class="o_stat_text"> Done</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id"/>
                        </group>
                        <group>
                            <label for="date_begin" string="Period"/>
                            <div class="o_row">
                                <field name="date_begin" widget="daterange" nolabel="1" class="oe_inline"
                                       options="{'related_end_date': 'date_end'}"/>
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                                       options="{'related_start_date': 'date_begin'}"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sprint Goal">
                            <field name="goal"/>
                        </page>
                        <page string="Users">
                            <field name="user_ids" string="Users"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_sprint_tree">
        <field name="name">smartest.sprint.tree</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="team_id" optional="show"/>
                <field name="date_begin" string="Start Date" optional="show"/>
                <field name="date_end" string="End Date" optional="show"/>
                <field name="state" optional="show"  widget="badge" decoration-success="state == 'done'"
                       decoration-warning="state == 'ongoing'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_sprint_search">
        <field name="name">smartest.sprint.search</field>
        <field name="model">project.sprint</field>
        <field name="arch" type="xml">
            <search string="All vehicles">
                <field string="Sprint" name="name" filter_domain="['|', ('name', 'ilike', self), ('team_id', 'ilike', self)]"/>
                <field string="Team" name="team_id"/>
                <field string="Members" name="user_ids"/>
                <field string="Taskse" name="task_ids"/>

                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Ongoing" name="ongoing" domain="[('state', '=', 'ongoing')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>

                <group expand="1" string="Group By">
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="Team" name="groupby_team" context="{'group_by': 'team_id'}"/>
                </group>
           </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="smartest_sprint_action">
        <field name="name">Sprint</field>
        <field name="res_model">project.sprint</field>
        <field name="view_mode">project.sprint</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_groupby_team': 1,}</field>
        <field name="help" type="html">
            <p classe="o_view_nocontent_smiling_face">
                No sprint were found. Let's create your first one!
            </p>
        </field>
    </record>

    <menuitem id="sprint_id" name="Sprint" parent="project.menu_project_config" sequence="20"
              action="smartest_sprint_action"/>

    <record id="change_sprint_state" model="ir.cron">
        <field name="name">change sprint state</field>
        <field name="model_id" ref="model_project_sprint"/>
        <field name="state">code</field>
        <field name="code">model._cron_close_sprint()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>
</odoo>