<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="smartest_view_project_attendance_list_view">
        <field name="name">smartest.project.attendance.list</field>
        <field name="model">project.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="working_days"/>
                <field name="aviability"/>
                <field name="aviability_percentage"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="smartest_view_project_attendance_form_view">
        <field name="name">smartest.project.attendance.form</field>
        <field name="model">project.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id" required="1"/>
                        <field name="working_days" required="1"/>
                        <field name="aviability"/>
                        <field name="aviability_percentage" widget="progressbar"/>
                    </group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="to_date" required="1"/>
                    </group>
                    <notebook>
                        <page string="leave days">
                            <group>
                                <field name="sick_days"/>
                                <field name="vacation_days"/>
                            </group>
                            <group>
                                <field name="training_days"/>
                                <field name="recovery_days"/>
                            </group>
                            <group>
                                <field name="holiday"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="view_project_attendance_graph" model="ir.ui.view">
        <field name="name">project.attendance.graph</field>
        <field name="model">project.attendance</field>
        <field name="arch" type="xml">
            <graph string="employee attendance">
                <field name="working_days"/>
                <field name="aviability"/>
            </graph>
        </field>
    </record>
<record model="ir.actions.act_window" id="smartest_view_project_attendance_action_list">
        <field name="name">Employee Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.attendance</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Employee Attendance.
            </p>
        </field>
    </record>
    <menuitem
        id="parent_menu_employee_attendance"
        name="Employee Attendance"
        action="smartest_view_project_attendance_action_list"
        parent="project.menu_project_report"
        sequence="0"
    />
</odoo>