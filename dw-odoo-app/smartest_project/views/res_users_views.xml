<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit employee form to add the smart button that leads to all employee contracts decisions -->
    <record model="ir.ui.view" id="view_users_form_inherit">
        <field name="name">view.users.form.inherit.task</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sprint_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
