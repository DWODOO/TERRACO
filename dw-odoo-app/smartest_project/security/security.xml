<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_project_leader" model="res.groups">
            <field name="name">Project leader</field>
            <field name="category_id" ref="base.module_category_services_project"/>
            <field name="implied_ids" eval="[(4, ref('project.group_project_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record model="ir.rule" id="project_update_manager_rule">
            <field name="name">See only his project update</field>
            <field name="model_id" ref="project.model_project_update"/>
            <field name="domain_force">['|',('user_id','=',user.id),('tasks.user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4,ref('group_project_leader'))]"/>
        </record>
        <record model="ir.rule" id="project_project_manager_rule">
            <field name="name">See only his project</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">['|',('user_id','=',user.id),('tasks.user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4,ref('group_project_leader'))]"/>
        </record>
    </data>
</odoo>
