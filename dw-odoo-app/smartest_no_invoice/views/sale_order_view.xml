<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherited_add_fields" model="ir.ui.view">
        <field name="name">sale.order.inherited.form.add.fields</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[3]" position="attributes">
                <attribute name="context">{'default_no_invoice': no_invoice}</attribute>
            </xpath>
            <xpath expr="//header/button[4]" position="attributes">
                <attribute name="context">{'default_no_invoice': no_invoice}</attribute>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="no_invoice" attrs="{'readonly': [('state', '!=', 'draft')]}" groups="smartest_no_invoice.group_not_declared"/>
            </xpath>
            <xpath expr="//field[@name='fiscal_position_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '!=', 'draft')]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>