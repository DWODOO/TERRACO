<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hr_payslip_run_report_mutuelle_id">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">

                <div class="page"/>
                        <h4 style="text-align:center">
                            Etat des Retenues de la Mutuelle
                        </h4>

                    <br></br>
                    <t t-foreach="docs" t-as="o">
                                <div><span t-field="o.name"/>
                        </div>
                        <br></br>


                        <table style="border:1px solid black;width:100%;border-collapse: collapse; border-spacing: 0 15px;">
<!--                            <tr>-->
<!--                                <td colspan="4" style="border:1px solid black; text-align:center;">-->
<!--                                <span t-field="o.name"/>-->
<!--                            </td>-->
<!--                            </tr>-->
                            <t t-set="total" t-value="0"/>
                            <t t-set="lines" t-value="o.slip_ids.line_ids.filtered(lambda x: x.code in ['R670'])"/>
                            <t t-if="lines">

                            <tr>
                                <th style="border:1px solid black; text-align:center; width:25%">Matricule</th>
                                <th style="border:1px solid black; text-align:center; width:25%">Employee</th>
                                <th style="border:1px solid black; text-align:center; width:25%">Montant</th>
                            </tr>
                            </t>
                        <t t-foreach="lines" t-as="move">
                            <tr>
                                <td style="border:1px solid black; text-align:center;"> <span t-field="move.slip_id.employee_id.registration_number"/></td>
                            <td style="border:1px solid black; text-align:center;"><span t-field="move.slip_id.employee_id.name"/></td>
                            <td style="border:1px solid black; text-align:center;"><span t-field="move.amount"/></td>
                                <t t-set="total" t-value="total + move.amount"/>
                        </tr>
                        </t>
                            <tr>
                                <td colspan="2" style="border:1px solid black; text-align:center;">
                                    TOTAL
                                </td>

                                <td style="border:1px solid black; text-align:center;">
                                    <span t-esc="total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_currency}"/>
                                </td>
                            </tr>
                        </table>



                    </t>

            </t>
        </t>


    </template>
</odoo>