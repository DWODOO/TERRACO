<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_journal" model="report.paperformat">
        <field name="name">A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">5</field>
        <field name="dpi">90</field>
    </record>
    <template id="report_cnas_journal_payroll">
        <t t-call="web.basic_layout">
            <t t-call="web.html_container">
                <t t-foreach="employees_list" t-as="employees">
                        <style type="text/css">
                            .validation_table th,.validation_table td {border: 1px solid black;padding : 4px;font-size: small;}
                            .validation_table th{background-color:#90a4ae;padding: 5px 5px;}
                            .validation_table td {border-top: 0px;border-bottom: 0px;}
                            .validation_table{margin-bottom:5px;}
                            .journal-head{background-color:#90a4ae; !important; border:1px solid black;margin:0px; padding:5px;}
                        </style>
                    <div class="page">
                        <div class="head">
                            <div class="journal-head">
                                <div class="text-left"
                                     style="display:inline-block;vertical-align: top;width:40%;padding-top:10px;">
                                    <span>Date :
                                        <t t-esc="date_now"/>
                                    </span>
                                    <br/>
                                    <span>Heure :
                                        <t t-esc="hour_now"/>
                                    </span>
                                </div>
                                <div style="display:inline-block;vertical-align:top; width:45%;" class="text-left">
                                    <h2>Livre de paie</h2>
                                    <t t-esc="date_start"/>
                                    -
                                    <t t-esc="date_end"/>

                                    <br/>
                                </div>
                            </div>
                            <div style="margin-top:20px;">
                                <span>Société :
                                    <t t-esc="company"/>
                                </span>
                            </div>
                        </div>
                        <table class="validation_table"
                               style="border: 2px solid black;border-collapse: collapse;width: 100%;margin-top:25px;">
                            <tr>
                                <th></th>
                                <th class="text-center">Rubrique</th>

                                <t t-foreach="employees" t-as="employee">
                                    <th class="text-center">
                                        <t t-esc="employee"/>
                                    </th>
                                </t>

                            </tr>
                            <t t-foreach="data_list[employees_index][0]" t-as="rule">
                                <tr t-att-style="'background-color:yellow;' if 'Total' in rule[1] else ''">
                                    <td>
                                        <t t-esc="rule[0]"/>
                                    </td>
                                    <td>
                                        <t t-esc="rule[1]"/>
                                    </td>
                                    <t t-foreach="employees" t-as="employee">
                                        <td class="text-right">
                                            <t t-esc="rule[2+employee_index]"/>
                                        </td>
                                    </t>
                                    <!--<td class="text-right" ><t t-esc="rule[len(rule) - 1]"/></td>-->
                                </tr>
                            </t>
                            <t t-foreach="data_list[employees_index][1]" t-as="rule2">
                                <t t-if="rule2[0] in [905]">
                                    <tr>
                                        <td></td>
                                        <td>
                                            <span>BASE imposable IRG</span>
                                        </td>
                                        <t t-foreach="employees" t-as="employee">
                                            <td class="text-right">
                                                <t t-esc="rule2[2+employee_index]"/>
                                            </td>
                                        </t>
                                        <!--<td class="text-right" ><t t-esc="rule2[len(rule2) - 1]"/></td>-->
                                    </tr>
                                </t>
                                <t t-if="rule2[0] not in [505, 402, 403,506, 405, 406,507, 408,409, 905]">
                                    <tr>
                                        <td></td>
                                        <td>

                                            <t t-esc="rule2[1]"/>
                                        </td>
                                        <t t-foreach="employees" t-as="employee">
                                            <td class="text-right">
                                                <t t-esc="rule2[2+employee_index]"/>
                                            </td>
                                        </t>
                                        <!--<td class="text-right" ><t t-esc="rule2[len(rule2) - 1]"/></td>-->
                                    </tr>
                                </t>
                            </t>
                        </table>
                    </div>
                 <p style="page-break-before:always;"></p>
                </t>
            </t>
        </t>
    </template>


    <record id="cnas_payroll_journal_report" model="ir.actions.report">
        <field name="name">CNAS Payroll Journal</field>
        <field name="model">hr.payslip.run</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">smartest_hr_payroll.report_cnas_journal_payroll</field>
        <field name="report_file">smartest_hr_payroll.report_cnas_journal_payroll</field>
        <field name="print_report_name">'Payroll Journal'</field>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_journal"/>
    </record>

</odoo>
