<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Settings View        -->
        <record id="smartest_res_config_settings_view_form_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_payroll']//div[@id='hr_payroll_localization']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="smartest_code_prefix" string="Configuration Code"/>
                            <div class="text-muted">
                                Configuration Rule Code.
                            </div>
                            <div>
                                <field name="smartest_code_prefix" placeholder="Prefix"/>
                                <field name="smartest_padding_code" placeholder="Lengh Code"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
