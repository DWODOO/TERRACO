<?xml version="1.0"?>
<odoo>
    <data>
        <record id="smartest_hr_iep_matrix_tree_view" model="ir.ui.view">
            <field name="name">hr.iep.matrix.tree</field>
            <field name="model">hr.iep.matrix</field>
            <field name="arch" type="xml">
                <tree string="IEP Matrix">
                    <field name="smartest_bound_from"/>
                    <field name="smartest_bound_to"/>
                    <field name="smartest_rate"/>
                    <field name="smartest_date_from"/>
                    <field name="smartest_date_to"/>
                    <field name="smartest_active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record id="smartest_hr_iep_matrix_form_view" model="ir.ui.view">
            <field name="name">hr.iep.matrix.form</field>
            <field name="model">hr.iep.matrix</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="IEP Matrix">
                            <group>
                                <field name="smartest_bound_from"/>
                                <field name="smartest_bound_to"/>
                            </group>
                            <group>
                                <field name="smartest_rate"/>
                            </group>
                            <group>
                                <field name="smartest_active" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <label for="smartest_date_from" string="Validity From"/>
                                <div class="oe_row">
                                    <field name="smartest_date_from" no_label="1"/>
                                    <label for="smartest_date_to" string="To"/>
                                    <field name="smartest_date_to" no_label="1"/>
                                </div>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="smartest_hr_iep_matrix_search" model="ir.ui.view">
            <field name="name">hr.iep.matrix.select</field>
            <field name="model">hr.iep.matrix</field>
            <field name="arch" type="xml">
                <search string="Search IEP Plan">
                    <filter name="smartest_active" string="Active" domain="[('smartest_active','!=', False)]"
                            help="Active BRM"/>

                    <group expand="0" string="Group By...">

                        <filter name="smartest_date_from" string="Start Date" icon="fa-calendar" domain="[]"
                                context="{'group_by':'smartest_date_from'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--IEP IN-->
        <record model="ir.actions.act_window" id="smartest_hr_iep_matrix_in_action">
            <field name="name">IEP Matrix IN</field>
            <field name="res_model">hr.iep.matrix</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_smartest_date_from': True,'default_smartest_iep_in': True}</field>
            <field name="domain">[('smartest_iep_in', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click on create button to add a new line of the IEP Matrix IN.
                </p>
            </field>
        </record>

        <menuitem id="smartest_hr_iep_matrix_in_menu"
                  parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
                  action="smartest_hr_iep_matrix_in_action"
                  sequence="60"/>
        <!--IEP OUT-->
        <record model="ir.actions.act_window" id="smartest_hr_iep_matrix_out_action">
            <field name="name">IEP Matrix OUT</field>
            <field name="res_model">hr.iep.matrix</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_smartest_date_from': True,'default_smartest_iep_in': False}</field>
            <field name="domain">[('smartest_iep_in', '=', False)]</field>

            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Click on create button to add a new line of the IEP Matrix OUT.
                </p>
            </field>
        </record>

        <menuitem id="smartest_hr_iep_matrix_out_menu"
                  parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
                  action="smartest_hr_iep_matrix_out_action"
                  sequence="70"/>

    </data>
</odoo>
