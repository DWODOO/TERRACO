<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="smartest_internal_layout_inherited" name="anouar test"
              inherit_id="web.internal_layout">

        <xpath expr="//div[hasclass('header')]" position="replace">
            <div class="header">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 120px;"
                             alt="Logo"/>
                    </div>
                    <div class="col-9" name="company_address" style="text-align:right">
                        <span t-if="company.company_details" t-field="company.company_details"></span>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
