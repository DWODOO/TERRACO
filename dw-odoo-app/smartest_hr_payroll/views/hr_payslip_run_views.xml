<odoo>

    <!--  Add other entries action wizard  -->
    <record id="action_payslip_run_other_entries_wizard" model="ir.actions.act_window">
        <field name="name">Add Other Entries</field>
        <field name="res_model">hr.payslip.run.other.entries</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="smartest_hr_payroll.hr_payslip_run_other_entries_view_form"/>
        <field name="target">new</field>
    </record>

    <!--  Add other entries button  -->
    <record id="hr_payslip_run_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_draft']" position="after">
                <button name="%(action_payslip_run_other_entries_wizard)d" type="action" string="Add Entries By Batch"  states="verify" context="{'default_slip_run_id': active_id}" class="oe_highlight"/>
            </xpath>
            <xpath expr="//div[@class='o_row']" position="after">
                    <field name="payroll"/>
            </xpath>
        </field>
    </record>
    <record id="hr_payslip_run_view_tree" model="ir.ui.view">
        <field name="name">hr.payslip.run.tree</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_tree"/>
        <field name="arch" type="xml">

            <field name="state" position="before">
                    <field name="net_wage"/>
            </field>
        </field>
    </record>

</odoo>
