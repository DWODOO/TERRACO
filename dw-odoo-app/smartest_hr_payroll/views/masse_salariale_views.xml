<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_masse_salariale_view_form" model="ir.ui.view">
        <field name="name">masse.salariale.form</field>
        <field name="model">masse.salariale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_lines" type="object" string="Calculer" attrs="{'invisible': [('state', '=', True)]}"/>
                </header>
                <sheet>
                    <h1>
                        <field name="reference"/>
                    </h1>
                    <group>
                    <group>
                <field name="name" string="Name" attrs="{'readonly': [('state', '=', True)]}"/>
                                      <label for="date_begin" string="Periode"/>
                                <div class="o_row">
                                    <field name="date_begin" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_end'}"
                                           />
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_end" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_begin'}"
                                           />
                                </div>
                    </group>
<!--                        <group>-->
<!--                                <label for="date_begin" string="Periode"/>-->
<!--                                <div class="o_row">-->
<!--                                    <field name="date_begin" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_end'}"-->
<!--                                           />-->
<!--                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>-->
<!--                                    <field name="date_end" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_begin'}"-->
<!--                                           />-->
<!--                                </div>-->
<!--                        </group>-->
                    <group>

                        <field name="date" attrs="{'readonly': [('state', '=', True)]}"/>
                        <field name="masse_type" attrs="{'readonly': [('state', '=', True)]}"/>
                        <field name="state" invisible="1"/>
                    </group>
                    </group>
                <field name="masse_line_ids">
                    <tree editable="top" create="0">
                        <field name="employee_id" attrs="{'column_invisible': [('parent.masse_type', '!=', 'employee')]}"/>
                        <field name="department_id" attrs="{'column_invisible': [('parent.masse_type', '!=', 'department')]}"/>
                        <field name="job_id" attrs="{'column_invisible': [('parent.masse_type', '!=', 'post')]}"/>
                        <field name="csp_id" attrs="{'column_invisible': [('parent.masse_type', '!=', 'CSP')]}"/>
                        <field name="masse_salariale"/>
                        <field name="masse_salariale_global"/>
                        <field name="company_currency_id" invisible="1"/>
                    </tree>
                </field>
                </sheet>
                  <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>

                    </div>
            </form>


        </field>
    </record>



        <record id="hr_masse_salariale_view_tree" model="ir.ui.view">
        <field name="name">masse.salariale.tree</field>
        <field name="model">masse.salariale</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="masse_type"/>
                <field name="date"/>
            </tree>

        </field>
    </record>

    <record model="ir.actions.act_window" id="smartest_masse_action">
            <field name="name">Smartest masse</field>
            <field name="res_model">masse.salariale</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p classe="o_view_nocontent_smiling_face">
                    create Masse Salariale !!
                </p>
            </field>
        </record>

        <menuitem id="smartest_masse_id" name="Masse Salariale" parent="hr_payroll.menu_hr_payroll_report" sequence="200"
                  action="smartest_masse_action"/>



</odoo>
