<?xml version="1.0"?>
<odoo>
    <data>
        <record id="hr_salary_rule_category_form_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule.category.form.inherit</field>
            <field name="model">hr.salary.rule.category</field>
            <field name="inherit_id" ref="hr_payroll.hr_salary_rule_category_form"/>
            <field name="arch" type="xml">
                <!--Add Necessary fields-->
                <field name="parent_id" position="after">
                    <label for="smartest_range_min" string="Range From"/>
                    <div class="o_row">
                        <field name="smartest_range_min" no_label="1" class="oe_inline"/>
                        <span> To</span>
                        <field name="smartest_range_max" no_label="1" class="oe_inline"/>
                    </div>
                    <field name="smartest_category_type" widget="selection"/>
                </field>

            </field>
        </record>
    </data>
</odoo>