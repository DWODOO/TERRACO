<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='personal_information']//group" position="inside">
                <group string="Experience">
                    <label for="smartest_in_experience_years"/>
                    <div class="o_row">
                        <field name="smartest_in_experience_years" class="oe_inline"/>
                        <span> Years</span>
                    </div>
                    <label for="smartest_out_experience_years"/>
                    <div class="o_row">
                        <field name="smartest_out_experience_years" class="oe_inline"/>
                        <span> Years</span>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
