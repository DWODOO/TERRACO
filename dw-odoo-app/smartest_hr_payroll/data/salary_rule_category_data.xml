<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--********************************************CREATE NEW CATEGORIES ********************************************-->


        <record id="net_category" model="hr.salary.rule.category">
            <field name="name">NET</field>
            <field name="code">net</field>
            <field name="smartest_category_type">net</field>
            <field name="smartest_range_min">500</field>
            <field name="smartest_range_max">550</field>
        </record>
        <record id="taxable_category" model="hr.salary.rule.category">
            <field name="name">Imposable</field>
            <field name="code">imp</field>
            <field name="smartest_category_type">taxable</field>
            <field name="smartest_range_min">200</field>
            <field name="smartest_range_max">300</field>
            <field name="parent_id" ref="smartest_hr_payroll.net_category"/>
        </record>
        <record id="ncni_category" model="hr.salary.rule.category">
            <field name="name">Neither taxable nor contributory</field>
            <field name="code">ncni</field>
            <field name="smartest_category_type">ni_impo_ni_coti</field>
            <field name="smartest_range_min">350</field>
            <field name="smartest_range_max">450</field>
            <field name="parent_id" ref="smartest_hr_payroll.net_category"/>
        </record>
        <record id="other_category" model="hr.salary.rule.category">
            <field name="name">Other</field>
            <field name="code">other</field>
            <field name="smartest_category_type">other</field>
            <field name="smartest_range_min">1</field>
            <field name="smartest_range_max">1000</field>

        </record>

        <record id="contribution_category" model="hr.salary.rule.category">
            <field name="name">Cotisable</field>
            <field name="code">cot</field>
            <field name="smartest_category_type">contribution</field>
            <field name="smartest_range_min">60</field>
            <field name="smartest_range_max">160</field>
            <field name="parent_id" ref="smartest_hr_payroll.taxable_category"/>
        </record>


        <record id="taxable_10_category" model="hr.salary.rule.category">
            <field name="name">Imposable 10 %</field>
            <field name="code">imp_10</field>
            <field name="smartest_category_type">taxable_10</field>
            <field name="smartest_range_min">60</field>
            <field name="smartest_range_max">160</field>
            <field name="parent_id" ref="smartest_hr_payroll.net_category"/>
        </record>
        <record id="contribution_10_category" model="hr.salary.rule.category">
            <field name="name">Contributory 10 %</field>
            <field name="code">cot_10</field>
            <field name="smartest_category_type">contribution_10</field>
            <field name="smartest_range_min">60</field>
            <field name="smartest_range_max">160</field>
            <field name="parent_id" ref="smartest_hr_payroll.taxable_10_category"/>
        </record>
    </data>
</odoo>
