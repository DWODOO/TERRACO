<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--************************** Work entry types *************************-->
        <record id="hr_absence_hours_work_entry" model="hr.work.entry.type">
            <field name="name">Absence Per Hours</field>
            <field name="color">1</field>
            <field name="code">ABS_HOURS</field>
            <field name="round_days">HALF</field>
            <field name="round_days_type">UP</field>
            <field name="smartest_hourly_paid">True</field>
        </record>
        <record id="hr_absence_days_work_entry" model="hr.work.entry.type">
            <field name="name">Absence Per Days</field>
            <field name="color">1</field>
            <field name="code">ABS_DAYS</field>
            <field name="round_days">FULL</field>
            <field name="smartest_hourly_paid">False</field>
            <field name="smartest_get_weekend_days">True</field>
        </record>
        <record id="hr_absence_punish_work_entry" model="hr.work.entry.type">
            <field name="name">Absence Punish</field>
            <field name="color">1</field>
            <field name="code">ABS_PNS</field>
            <field name="smartest_get_weekend_days">True</field>
        </record>

        <record id="hr_additional_hours50_work_entry" model="hr.work.entry.type">
            <field name="name">Additional Hours (50%)</field>
            <field name="color">1</field>
            <field name="code">H50</field>
            <field name="smartest_paid_in_addition">True</field>
            <field name="smartest_hourly_paid">True</field>
        </record>

        <record id="hr_additional_hours100_work_entry" model="hr.work.entry.type">
            <field name="name">Additional Hours (100%)</field>
            <field name="color">1</field>
            <field name="code">H100</field>
            <field name="smartest_paid_in_addition">True</field>
            <field name="smartest_hourly_paid">True</field>
        </record>
        <record id="hr_additional_hours75_work_entry" model="hr.work.entry.type">
            <field name="name">Additional Hours (75%)</field>
            <field name="color">1</field>
            <field name="code">H75</field>
            <field name="smartest_paid_in_addition">True</field>
            <field name="smartest_hourly_paid">True</field>
        </record>
        <record id="hr_additional_hours150_work_entry" model="hr.work.entry.type">
            <field name="name">Additional Hours (150%)</field>
            <field name="color">1</field>
            <field name="code">H150</field>
            <field name="smartest_paid_in_addition">True</field>
            <field name="smartest_hourly_paid">True</field>
        </record>
        <record id="hr_work_entry_contract.work_entry_type_legal_leave" model="hr.work.entry.type">
            <field name="code">LEGAL_LEAVE</field>
            <field name="name">LEGAL LEAVE</field>
            <field name="smartest_get_weekend_days">True</field>
        </record>
           <record id="hr_work_entry_contract.work_entry_type_sick_leave" model="hr.work.entry.type">
            <field name="smartest_get_weekend_days">True</field>
        </record>
    </data>
</odoo>