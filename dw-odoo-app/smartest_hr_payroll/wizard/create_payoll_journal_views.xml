<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_payroll_journal_form" model="ir.ui.view">
        <field name="name">create.payroll.journal.wizard</field>
        <field name="model">create.payroll.journal</field>
        <field name="arch" type="xml">
            <form string="Create payroll journal">
                <group>
                    <field name="payslip_run_id" required="1"/>
                    <field name="livre_per" required="1" string="Par"/>
                    <field name="livre_type" required="1" string="Type de Livre"/>
                </group>
                <group>
                    <label for="date_start" string="Period"/>
                    <div>
                        <field name="date_start" class="oe_inline"/> - <field name="date_end" class="oe_inline"/>
                    </div>
                    <field name="report" filename="report_name" attrs="{'invisible': [('livre_type', '!=', 'horiz')]}"/>
                    <field name="report_name" invisible="1"/>
                </group>
                <field name="department_ids" attrs="{'invisible': [('livre_per', '!=', 'department')]}"/>
                <field name="csp_ids" attrs="{'invisible': [('livre_per', '!=', 'CSP')]}"/>
                <field name="employee_ids" attrs="{'invisible': [('livre_per', '!=', 'employee')]}"/>

                <footer>
                    <button name="print_report" string="Print" type="object" class="btn-primary"
                    attrs="{'invisible': ['|',('livre_per', '!=', 'department'),('livre_type', '!=', 'vert')]}"/>

                    <button name="print_report_csp" string="Print" type="object" class="btn-primary"
                        attrs="{'invisible': ['|',('livre_per', '!=', 'CSP'),('livre_type', '!=', 'vert')]}"/>

                    <button string="Print" name="print_report_horiz" type="object" class="btn-primary"
                            attrs="{'invisible': [('livre_type', '!=', 'horiz')]}"/>

                    <button string="Cancel" class="btn-secondary" special="cancel"/>


                </footer>
            </form>
        </field>
    </record>

    <record id="create_payroll_journal_wizard" model="ir.actions.act_window">
        <field name="name">Create payroll journale</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.payroll.journal</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_payroll_journal_form"/>
        <field name="target">new</field>

    </record>

<!--    <menuitem id="hr_reporting"-->
<!--              parent="hr_payroll.menu_hr_payroll_root"-->
<!--              name="Reporting"-->
<!--              sequence="10"-->
<!--              groups="hr_payroll.group_hr_payroll_manager"/>-->

    <menuitem id="hr_payroll_journal"
              parent="hr_payroll.menu_hr_payroll_report"
              name="Payroll journal"
              action="create_payroll_journal_wizard"
              sequence="20"/>


</odoo>
