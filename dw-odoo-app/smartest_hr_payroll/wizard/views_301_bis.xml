<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

        <record id="301_bis_form" model="ir.ui.view">
            <field name="name">wizard.301.bis</field>
            <field name="model">wizard.301.bis</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group invisible="context.get('smartest_hide_excel_301_btn')">
                            <p>Please enter Date</p>
                            <field name="reference_date" required="1"/>
                        </group>
                        <group invisible="not context.get('smartest_hide_excel_301_btn')">
                            <p> File generated </p>
                            <field name="document"/>
                        </group>
                        <footer>
                            <button name="init_doc" icon="fa-print" string="Excel" class="btn-primary" type="object" invisible="context.get('smartest_hide_excel_301_btn')"/>
                            <button special="cancel" string="Cancel" class="btn-secondary"/>
                        </footer>
                    </group>
                </form>
            </field>
        </record>

        <record id="wizard_301_bis_action" model="ir.actions.act_window">
            <field name="name">301 BIS</field>
            <field name="res_model">wizard.301.bis</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="301_bis_form"/>
            <field name="target">new</field>
        </record>

        <menuitem
            id ="301_bis_menu"
            name="301 BIS"
            parent="smartest_hr_payroll.hr_divers_menu"
            sequence="950"
            action="wizard_301_bis_action"
            groups="hr_payroll.group_hr_payroll_manager"/>
</odoo>