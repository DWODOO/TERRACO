<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_applicant_view_form" model="ir.ui.view">
        <field name="name">hr.applicant.form.smartest</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
        <field name="arch" type="xml">
            <field name="linkedin_profile" position="after">
                <field name="survey_ids"/>
                <field name="total_score"/>

                <field name="last_check" invisible="1"/>
            </field>
            <xpath expr="//header" position="inside">
                <button string="Pass interview" name="action_test_survey_one" type="object"/>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_survey_applicant" type="object" class="oe_stat_button" icon="fa-id-card-o"
                        groups="hr.group_hr_user">
                    <span>Interview</span>
                </button>
            </div>
        </field>
    </record>

    <record id="hr_applicant_view_tree" model="ir.ui.view">
        <field name="name">hr.applicant.tree.smartest</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_tree_view_job"/>
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="total_score"/>
            </field>
        </field>
    </record>
</odoo>
