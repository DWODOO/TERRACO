<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--********************************* Maintenance Task Stop Wizard ******************************************-->

    <!--    Form View    -->
    
    <record id="hr_employee_printing_wizard_view_form" model="ir.ui.view">
        <field name="name">Hr Employee Printing Wizard form</field>
        <field name="model">hr.employee.printing.wizard</field>
        <field name="arch" type="xml">
          <form string="Print Confirmation">
              <span class="o_form_label">Warning: Are you sure you want to print?</span>
              <footer>
                  <button name="action_submit" string="Confirm" type="object" class="btn-primary"/>
                  <button string="Cancel" class="btn-secondary" special="cancel" />
              </footer>
        </form>
        </field>
    </record>

    <record id="action_print_confirm" model="ir.actions.act_window">
        <field name="name">print Confirmation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.printing.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_employee_printing_wizard_view_form"/>
        <field name="context">{'record_id' : active_id}</field>
        <field name="target">new</field>
    </record>

</odoo>
