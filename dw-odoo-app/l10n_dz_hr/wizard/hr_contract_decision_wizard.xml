<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--********************************* Hr Contract Decisions Wizard ******************************************-->

    <!--    Form View    -->

    <record id="hr_contract_decisions_wizard_view_form" model="ir.ui.view">
        <field name="name">Hr Contract Decisions Wizard form</field>
        <field name="model">hr.contract.decisions.wizard</field>
        <field name="arch" type="xml">
            <form string="Contract Decision">
                <h1>
                    <field name="employee_id" readonly="1"/>
                </h1>
                <field name="company_id" invisible="1"/>
                <div class="col-6">
                    <group>
                        <field name="contract_id" readonly="1"/>
                    </group>
                </div>
                <div class="col-6">
                    <group>
                        <field name="decision_type_id"/>
                        <field name="decision_type" invisible="1"/>
                    </group>
                </div>
                <group attrs="{'invisible': [('decision_type', '!=', 'Transfer'), ('decision_type', '!=', 'Promotion')]}">
                    <field name="department_id"/>
                </group>
                <group attrs="{'invisible': [('decision_type', '!=', 'Job Assignment'), ('decision_type', '!=', 'Promotion')]}">
                    <field name="job_id"/>
                </group>
                <group attrs="{'invisible': [('decision_type', '!=', 'Salary Rise'), ('decision_type', '!=', 'Promotion')]}">
                    <group>
                        <field name="wage"/>
                    </group>
                    <group>
                        <group>
                            <field name="allowance_meal"/>
                            <field name="allowance_meal_type"/>
                        </group>
                        <group>
                            <field name="allowance_transportation"/>
                            <field name="allowance_transportation_type"/>
                        </group>
                    </group>
                    <group>
                        <field name="allowance_vehicle"/>
                        <field name="allowance_travel"/>
                        <field name="allowance_rent"/>
                        <field name="allowance_refund_rent"/>
                        <field name="allowance_phone"/>
                        <field name="allowance_unique_salary"/>
                        <field name="allowance_pop"/>
                        <field name="allowance_pap"/>
                        <field name="allowance_hse"/>
                        <field name="allowance_iff"/>
                        <field name="allowance_ifsp"/>
                        <field name="allowance_itp"/>
                    </group>
                    <group>
                        <field name="allowance_responsibility"/>
                        <field name="allowance_clothing"/>
                        <field name="allowance_cash"/>
                        <field name="allowance_isp"/>
                        <field name="allowance_in_iep"/>
                        <field name="allowance_out_iep"/>
                        <field name="allowance_pri"/>
                        <field name="allowance_icr"/>
                        <field name="allowance_technicality"/>
                        <field name="allowance_isolated_area"/>
                        <field name="allowance_nuisance"/>
                        <field name="allowance_availability"/>
                        <field name="allowance_soiling"/>
                    </group>
                </group>
                <footer>
                    <button name="action_submit" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_contract_decision_wizard" model="ir.actions.act_window">
        <field name="name">Contract Decisions Wizard</field>
        <field name="res_model">hr.contract.decisions.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="l10n_dz_hr.hr_contract_decisions_wizard_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
