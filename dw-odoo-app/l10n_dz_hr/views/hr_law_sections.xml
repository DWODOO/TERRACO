<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- LAWS-->


    <record id="hr_law_sections_tree_view" model="ir.ui.view">
        <field name="name">hr.law.sections.tree.view</field>
        <field name="model">hr.law.sections</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="law_type"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_law_sections_form_view" model="ir.ui.view">
        <field name="name">hr.law.sections.view.form</field>
        <field name="model">hr.law.sections</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="law_type"/>
                        <field name="description"/>
                    </group>
                    <div style="padding-top: 100px">
                        <div class="row">
                            <div class="col-12">
                                <table>
                                    <tr>
                                        <td>Nom Prénom</td>
                                        <strong>
                                            <td>self.employee_id.name</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Date de début du contrat</td>
                                        <strong>
                                            <td>self.date_start</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Date de fin du contrat</td>
                                        <strong>
                                            <td>self.date_end</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Département</td>
                                        <strong>
                                            <td>self.department_id.name</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Poste</td>
                                        <strong>
                                            <td>self.job_id.name</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Type de contrat</td>
                                        <strong>
                                            <td>self.contract_type_id.name</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Article 12</td>
                                        <strong>
                                            <td>self.article12</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Catégorie socio-professionel</td>
                                        <strong>
                                            <td>self.socio_professionel_category_level_id.name</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Résponsable RH</td>
                                        <strong>
                                            <td>self.hr_responsible_id.name</td>
                                        </strong>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-6">
                                <table>
                                    <tr>
                                        <td>Préavie</td>
                                        <strong>
                                            <td>self.leave_notice</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Type de salaire</td>
                                        <strong>
                                            <td>self.wage_type</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Salaire</td>
                                        <strong>
                                            <td>self.wage</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Téléphone</td>
                                        <strong>
                                            <td>self.allowance_phone</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Performence</td>
                                        <strong>
                                            <td>self.allowance_performence</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Location</td>
                                        <strong>
                                            <td>self.allowance_rent</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Véhicule</td>
                                        <strong>
                                            <td>self.allowance_vehicle</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Panier (Jour / Mois)</td>
                                        <strong>
                                            <td>self.allowance_meal_type</td>
                                        </strong>
                                    </tr>
                                    <tr>
                                        <td>Prime de Panier</td>
