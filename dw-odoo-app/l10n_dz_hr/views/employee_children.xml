<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_children_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.children.tree</field>
        <field name="model">hr.employee.children</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="employee_id"/>
                <field name="first_name"/>
                <field name="school_level"/>
                <field name="school_year"/>
           </tree>
        </field>
    </record>

    <record id="action_employee_children" model="ir.actions.act_window">
            <field name="name">Employee Children</field>
            <field name="res_model">hr.employee.children</field>
            <field name="view_mode">tree</field>
    </record>
</odoo>