<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Tree -->
    <record id="view_printing_log_tree" model="ir.ui.view">
        <field name="name">hr.printing.log.tree</field>
        <field name="model">hr.employee.printing.log</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'canceled'"
                  decoration-success="state == 'done'">
                <field name="name"/>
                <field name="document"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="cancel_user_id"/>
                <field name="cancel_date"/>
                <button name="button_cancel"
                        type="object"
                        attrs="{'invisible': [('state', '=', 'canceled')]}"
                        string="Cancel"
                        class="oe_highlight"/>
            </tree>
        </field>
    </record>

    <!--    Form -->
    <record id="view_printing_log_form" model="ir.ui.view">
        <field name="name">hr.printing.log.form</field>
        <field name="model">hr.employee.printing.log</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_cancel"
                            type="object"
                            attrs="{'invisible': [('state', '=', 'canceled')]}"
                            string="Cancel"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="done,canceled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="document"/>
                    </group>
                    <group>
                        <group>
                            <field name="user_id" readonly="1"/>
                            <field name="date" readonly="1"/>
                        </group>
                        <group>
                            <field name="cancel_user_id" readonly="1"/>
                            <field name="cancel_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_printing_log_search">
        <field name="name">hr.printing.log.tree</field>
        <field name="model">hr.employee.printing.log</field>
        <field name="arch" type="xml">
            <search>
                <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
                <filter name="cancel" string="Cancel" domain="[('state', '=', 'canceled')]"/>
                <separator/>
                <field name="document" string="Document"/>
                <field name="name" string="Number"/>
            </search>
        </field>
    </record>


    <record id="action_printing_log" model="ir.actions.act_window">
        <field name="name">Printing Log</field>
        <field name="res_model">hr.employee.printing.log</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"search_default_done": 1}</field>
    </record>


    <menuitem id="menu_printing_log"
              action="action_printing_log"
              parent="hr.menu_human_resources_configuration"
              sequence="4"/>
</odoo>