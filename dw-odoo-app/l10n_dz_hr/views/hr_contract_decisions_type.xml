<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_decisions_type_tree" model="ir.ui.view">
        <field name="name">hr.contract.decisions.type.tree</field>
        <field name="model">hr.contract.decisions.type</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_contract_decisions_type_form" model="ir.ui.view">
        <field name="name">hr.contract.decisions.type.form</field>
        <field name="model">hr.contract.decisions.type</field>
        <field name="arch" type="xml">
            <form string="Contract Decision Type" create="0" edit="0">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_contract_decisions_type_views">
        <field name="name">Contract Decision Type</field>
        <field name="res_model">hr.contract.decisions.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>