<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_contract_decisions_tree" model="ir.ui.view">
        <field name="name">hr.contract.decisions.tree</field>
        <field name="model">hr.contract.decisions</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="contract_id"/>
                <field name="decision_type_id"/>
                <field name="write_date"/>
                <field name="write_uid"/>
            </tree>
        </field>
    </record>

    <record id="view_contract_decisions_form" model="ir.ui.view">
        <field name="name">hr.contract.decisions.form</field>
        <field name="model">hr.contract.decisions</field>
        <field name="arch" type="xml">
            <form string="Contract Decision" create="0" edit="0">
                <sheet>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <field name="company_id" invisible="1"/>
                    <group>
                        <div class="col-6">
                            <group>
                                <field name="contract_id" readonly="1"/>
                                <field name="employee_id"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group>
                                <field name="decision_type_id"/>
                            </group>
                        </div>
                    </group>
                    <group>
                        <field name="department_id" attrs="{'invisible': [('decision_type_id', '!=', 'transfer')]}"/>
                    </group>
                    <group>
                        <field name="job_id" attrs="{'invisible': [('decision_type_id', '!=', 'job_assignment')]}"/>
                    </group>
                    <group attrs="{'invisible': [('decision_type_id', '!=', 'rise')]}">
                        <group>
                            <field name="wage"/>
                        </group>
                        <group>
                            <group>
                                <field name="allowance_meal"/>
                                <field name="allowance_meal_type"/>
                            </group>
                            <group>
                                <field name="allowance_transportation"/>
                                <field name="allowance_transportation_type"/>
                            </group>
                        </group>
                        <group>
                            <field name="allowance_vehicle"/>
                            <field name="allowance_travel"/>
                            <field name="allowance_rent"/>
                            <field name="allowance_refund_rent"/>
                            <field name="allowance_phone"/>
                            <field name="allowance_unique_salary"/>
                            <field name="allowance_pop"/>
                            <field name="allowance_pap"/>
                            <field name="allowance_hse"/>
                            <field name="allowance_iff"/>
                            <field name="allowance_ifsp"/>
                            <field name="allowance_itp"/>
                        </group>
                        <group>
                            <field name="allowance_responsibility"/>
                            <field name="allowance_clothing"/>
                            <field name="allowance_cash"/>
                            <field name="allowance_isp"/>
                            <field name="allowance_in_iep"/>
                            <field name="allowance_out_iep"/>
                            <field name="allowance_pri"/>
                            <field name="allowance_icr"/>
                            <field name="allowance_technicality"/>
                            <field name="allowance_isolated_area"/>
                            <field name="allowance_nuisance"/>
                            <field name="allowance_availability"/>
                            <field name="allowance_soiling"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_contract_decisions_views">
        <field name="name">Contract Decision</field>
        <field name="res_model">hr.contract.decisions</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="contract_decisions_menu"
          name="Contract Decisions"
          action="action_contract_decisions_views"
          parent="hr.menu_hr_employee_payroll"
          sequence="901"
          groups="hr_contract.group_hr_contract_manager"/>

</odoo>