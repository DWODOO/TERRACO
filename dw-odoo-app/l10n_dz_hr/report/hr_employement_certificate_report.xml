    <record id="action_hr_employment_certificate" model="ir.actions.report">
        <field name="name">Employment certificate</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_dz_hr.hr_report_employment_certificate</field>
        <field name="report_file">l10n_dz_hr.hr_report_employment_certificate</field>
        <field name="print_report_name">'Employment certificate - %s' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>
</odoo>
