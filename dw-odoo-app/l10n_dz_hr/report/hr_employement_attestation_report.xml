    <record id="action_hr_employment_attestation" model="ir.actions.report">
        <field name="name">Employment attestation</field>
        <field name="model">hr.employee</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_dz_hr.hr_report_employment_attestation</field>
        <field name="report_file">l10n_dz_hr.hr_report_employment_attestation</field>
        <field name="print_report_name">'Employment attestation - %s' % (object.name)</field>
        <field name="binding_type">report</field>
    </record>
