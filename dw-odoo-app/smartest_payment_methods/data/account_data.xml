<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!--
            Those are the default payment types used in Cash Ticket Management.
            All the bellow payment types has as code 'cash.ticket', This code is used to filter payment type
            on cash.ticket.line model to only those types when selection the Payment Method.
        -->
        <record id="account_payment_method_cash_in" model="account.payment.method">
            <field name="name">Cash</field>
            <field name="code">cash.ticket.cash</field>
            <field name="payment_type">inbound</field>
        </record>
        <record id="account_payment_method_check_in" model="account.payment.method">
            <field name="name">Check</field>
            <field name="code">cash.ticket.check</field>
            <field name="payment_type">inbound</field>
        </record>
        <record id="account_payment_method_transfer_in" model="account.payment.method">
            <field name="name">Transfer</field>
            <field name="code">cash.ticket.transfer</field>
            <field name="payment_type">inbound</field>
        </record>
        <record id="account_payment_method_cash_outbound" model="account.payment.method">
            <field name="name">Cashs</field>
            <field name="code">cash.ticket.cash.out</field>
            <field name="payment_type">outbound</field>
        </record>
        <record id="account_payment_method_check_out" model="account.payment.method">
            <field name="name">Check</field>
            <field name="code">cash.ticket.check.out</field>
            <field name="payment_type">outbound</field>
        </record>
        <record id="account_payment_method_transfer_out" model="account.payment.method">
            <field name="name">Transfer</field>
            <field name="code">out.cash.ticket.transfer</field>
            <field name="payment_type">outbound</field>
        </record>
    </data>
</odoo>