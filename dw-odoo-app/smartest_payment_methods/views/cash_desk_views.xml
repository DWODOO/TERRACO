<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Cash Desk ********************************************-->
    <!--    Form View    -->
    <record id="cash_desk_view_form" model="ir.ui.view">
        <field name="name">cash_desk_view_form</field>
        <field name="model">cash.desk</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tickets"
                                type="object"
                                class="oe_stat_button"
                                attrs="{'invisible': [('ticket_count', '=', 0)]}"
                                icon="fa-money">
                            <field name="ticket_count" widget="statinfo" string="Ticket(s)"/>
                        </button>
                        <button name="action_view_users"
                                type="object"
                                class="oe_stat_button"
                                attrs="{'invisible': [('user_count', '=', 0)]}"
                                icon="fa-user">
                            <field name="user_count" widget="statinfo" string="User(s)"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="journal_id" context="{'default_type': 'sale'}"/>
                            <field name="close_account_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Users">
                        <field name="user_ids" nolabel="1" widget="many2many_tags"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--    Tree View    -->
    <record id="cash_desk_view_tree" model="ir.ui.view">
        <field name="name">cash_desk_view_tree</field>
        <field name="model">cash.desk</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="description" optional="hide"/>
                <field name="user_count" optional="show"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>
    <!--    Search    -->
    <record id="cash_desk_view_search" model="ir.ui.view">
        <field name="name">cash_desk_view_search</field>
        <field name="model">cash.desk</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <field name="user_count"/>
                <field name="active"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    <!--    Action    -->
    <record id="cash_desk_action" model="ir.actions.act_window">
        <field name="name">Cash Desks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.desk</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Cash Desk
            </p>
        </field>
    </record>
</odoo>
