<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Cash Desk ********************************************-->
    <!--    Form View    -->
    <record id="cash_ticket_view_form" model="ir.ui.view">
        <field name="name">cash_ticket_view_form</field>
        <field name="model">cash.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Validate" class="oe_highlight" states="paid,partially_paid"
                            type="object"/>
                    <button name="action_open" string="Open" type="object"
                            groups="smartest_payment_cash.group_cash_manager"
                            attrs="{'invisible': ['|', ('state', '!=', 'validated'), ('amount_residual', '&lt;=', 0)]}"/>
                    <button name="action_cancel" string="Cancel" type="object" states="validated"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid,validated"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sales"
                                type="object"
                                class="oe_stat_button"
                                attrs="{'invisible': [('sale_order_count', '=', 0)]}"
                                icon="fa-dollar">
                            <field name="sale_order_count" widget="statinfo" string="Sale(s)"/>
                        </button>
                        <button name="action_view_invoices"
                                type="object"
                                class="oe_stat_button"
                                attrs="{'invisible': [('invoice_count', '=', 0)]}"
                                icon="fa-pencil-square-o">
                            <field name="invoice_count" widget="statinfo" string="Invoice(s)"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" text="Paid"
                            attrs="{'invisible': ['|', '|', ('state', 'in', ['canceled', 'partially_paid']), ('amount_residual', '&gt;', 0), ('amount_paid', '=', 0)]}"/>
                    <widget name="web_ribbon" text="Partially Paid" bg_color="bg-warning"
                            attrs="{'invisible': [('state', '!=', 'partially_paid')]}"/>
                    <widget name="web_ribbon" text="Canceled" bg_color="bg-danger"
                            attrs="{'invisible': [('state', '!=', 'canceled')]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" nolable="1" placeholder="Ticket NÂ°"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General">
                            <field name="partner_id"/>
                            <field name="invoice_ids" widget="many2many_tags"/>
                            <field name="ticket_cancel_id" states="canceled"/>
                            <field name="source"/>
                        </group>
                        <group string="Payment">
                            <field name="date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="cash_desk_id" options="{'no_create': True, 'no_open': True}"/>
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount"/>
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}"
                                       groups="base.group_multi_currency" readonly="1"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Lines">
                            <field name="ticket_line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="payment_method_id" options="{'no_create_edit':1, 'no_open': 1}"/>
                                    <field name="reference"/>
                                    <field name="amount"/>
                                    <field name="currency_id"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="cash_total">
                                <field name="amount"/>
                                <field name="amount_paid"/>
                                <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                    <label for="amount_residual"/>
                                </div>
                                <field name="amount_residual" nolabel="1" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Payments" groups="base.group_no_one" states="validated">
                            <field name="payment_ids"/>
                        </page>
                        <page string="Account Moves" groups="account.group_account_user" states="validated">
                            <field name="move_line_ids"/>
                        </page>
                        <page string="Divers">
                            <field name="note" placeholder="Note..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--    Tree View    -->
    <record id="cash_ticket_view_tree" model="ir.ui.view">
        <field name="name">cash_ticket_view_tree</field>
        <field name="model">cash.ticket</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state == 'draft'"
                  decoration-info="state == 'validated'"
                  decoration-warning="state == 'partially_paid'"
                  decoration-success="state == 'paid'"
                  decoration-muted="state == 'canceled'"
                  default_order="date desc">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="sale_order_ids" widget="many2many_tags" optional="hide"/>
                <field name="invoice_ids" widget="many2many_tags"/>
                <field name="date"/>
                <field name="source" optional="hide"/>
                <field name="ticket_cancel_id" optional="hide"/>
                <field name="cash_desk_id" optional="show"/>
                <field name="amount" sum="Total"/>
                <field name="amount_paid" optional="hide" sum="Total Paid"/>
                <field name="amount_residual" optional="hide" sum="Total Residual"/>
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>
    <!--    Search    -->
    <record id="cash_ticket_view_search" model="ir.ui.view">
        <field name="name">cash_ticket_view_search</field>
        <field name="model">cash.ticket</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="sale_order_ids"/>
                <field name="invoice_ids"/>
                <field name="source"/>
                <field name="cash_desk_id"/>
                <field name="ticket_cancel_id"/>
                <field name="state"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Partially Paid" name="partially_paid" domain="[('state', '=', 'partially_paid')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Opened" name="opened" domain="[('state', '!=', 'validated')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_by_partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string="Cash Desk" name="group_by_cash_desk_id" context="{'group_by': 'cash_desk_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--    Action    -->
    <record id="cash_ticket_action" model="ir.actions.act_window">
        <field name="name">Cash Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.ticket</field>
        <field name="view_mode">tree,form</field>
        <!--By default, when opening cash.ticket list view, the 'opened' filter will be selected-->
        <field name="context">{'search_default_opened': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Cash Ticket Available !
            </p>
        </field>
    </record>
</odoo>
