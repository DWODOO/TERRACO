<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Cash Desk ********************************************-->
    <!--    Form View    -->
    <record id="cash_register_view_form" model="ir.ui.view">
        <field name="name">cash_register_view_form</field>
        <field name="model">cash.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate_statement" string="Confirm" class="oe_highlight" type="object" confirm="
                    Want to Proceed ?" states="draft,ongoing"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="action_view_moves"
                                    type="object"
                                    string="Moves"
                                    class="oe_stat_button"
                                    icon="fa-bars"
                                    groups="account.group_account_manager">
                                <field name="move_count" readonly="1"/>
                            </button>
                    </div>
                    <group col="2">
                        <field name="name"/>
                    </group>
                    <group col="6">
                        <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}" domain="[('cash_register', '=', True)]"/>
                        <field name="code_journal"/>
                    </group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group col="6">
                        <field name="open_amount" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                        <field name="total_amount" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="close_amount" attrs="{'invisible': [('state', '=', 'draft')],'readonly': [('state', '!=', 'ongoing')]}"/>
                    </group>
                    <group>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids" attrs="{'readonly': [('state', 'in', ('done', 'canceled'))]}">
                                <tree editable="bottom">
                                    <field name="cash_register_id" invisible="1"/>
                                    <field name="is_allowed_to_post" invisible="1"/>
                                    <field name="product_id" attrs="{'readonly': [('state', 'in', ('done', 'posted'))]}"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                                           decoration-warning="state == 'done'" decoration-success="state == 'posted'" readonly="1"/>
                                    <button name="action_create_accounting_document" string="Confirm" states="draft"
                                            class="oe_highlight" type="object"/>
                                    <button name="action_post_accounting_document" string="Post"
                                            class="oe_highlight" type="object"
                                            groups="account.group_account_manager"
                                            attrs="{'invisible': ['|', ('is_allowed_to_post', '!=', True), ('state', 'in', ('draft', 'posted'))]}"/>
                                    <field name="amount" attrs="{'readonly': [('state', 'in', ('done', 'posted'))]}"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="customer_payments" string="Encaissement(s)">
                            <field mode="tree,form" name="payment_customer_ids" context="{'default_date':date,'default_journal_id': journal_id,'default_payment_type': 'inbound','default_partner_type': 'customer', 'form_view_ref': 'account.view_account_payment_form'}">
                                <tree delete="0">
                                    <field name="id" invisible="1"/>
                                    <field name="name" readonly="1" optional="show"/>
                                    <field name="payment_type" invisible="1"/>
                                    <field name="journal_id" optional="hide"/>
                                    <field name="is_internal_transfer" optional="hide"/>
                                    <field name="partner_type" invisible="1"/>
                                    <field name="smartest_partner_type"/>
                                    <field name="destination_journal_id" attrs="{'invisible':[('is_internal_transfer', '!=', True)],'required':[('is_internal_transfer', '==', True)]}" optional="hide"/>
                                    <field name="partner_id" string="Partenaire" attrs="{'invisible':[('is_internal_transfer', '=', True)]}"/>
                                    <field name="amount"/>
                                    <field name="date" optional="hide"/>
                                    <field name="amount_company_currency_signed" widget="monetary" string="Amount" sum="Total" invisible="1"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                                    <button name="action_post" string="Confirm" class="oe_highlight" type="object" states="draft"/>
                                    <button name="open_linked_invoices" string="invoice(s)" class="btn-secondary" type="object" attrs="{'invisible': ['|',('state', '!=', 'posted'),('is_reconciled', '=', True)]}"/>
                                    <field name="reconciled_invoice_ids" widget="many2many_tags" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                                    <field name="is_reconciled" invisible="1"/>
                                    <button name="open_this_payment_form" string="Open" type="object"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Divers">
                            <field name="note" placeholder="Note..."/>
                        </page>
                    </notebook>
                    <div class="row">
                        <div class="col-6">
                        </div>
                        <div class="col-6 float-right" style="text-align: right">
                            <group>
                                <field name="line_total_amount" class="oe_inline"/>
                                <field name="total_amount" string="Amount Residual" class="oe_inline"/>
                            </group>
                        </div>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
