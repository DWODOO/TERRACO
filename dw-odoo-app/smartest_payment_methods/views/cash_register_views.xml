    <!--    Action    -->
    <record id="cash_register_action" model="ir.actions.act_window">
        <field name="name">Cash registers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.statement</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="smartest_payment_cash.cash_register_view_form"/>
        <field name="domain">[('cash_register', '=', True)]</field>
        <field name="context">{'search_default_opened': True}</field>
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('cash_statement_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('cash_register_view_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Cash register Available !
            </p>
        </field>
    </record>


    <!--   Journal view   -->
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="cash_register" string="Is Cash Register"/>
            </xpath>
        </field>
    </record>
