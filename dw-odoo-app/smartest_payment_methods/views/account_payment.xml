<?xml version="1.0" encoding="utf-8"?>
<odoo>
         <!--    Form View    -->
        <record id="smartest_cash_statement_inherit_account_payment" model="ir.ui.view">
            <field name="name">smartest_cash_statement.view.form.inherit_account_payment</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="cash_statement_id" invisible="1"/>
                </xpath>
            </field>
        </record>
</odoo>