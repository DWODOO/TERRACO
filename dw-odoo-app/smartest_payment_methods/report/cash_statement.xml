<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="smartest_payment_cash.cash_statement_document">
        <t t-call="web.html_container">
            <t t-set="company" t-value="res_company"/>
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-family: serif; font-size: 15px;margin-top:none">
                        <div class="text-center"><h1 class="font-weight-bold">Etat De <span t-field="o.journal_id.name"/> Du <span t-field="o.date"/></h1></div>
                        <br/>
                        <div class="row">
                            <div class="text-center col-4">
                                <h6 class="font-weight-bold">Solde D'ouverture</h6>
                            </div>
                            <div class="text-right col-3">
                                <h6 class="font-weight-bold"><span t-field="o.open_amount"/></h6>
                            </div>
                        </div>
                        <br/>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Designation</th>
                                    <th>Partenaire</th>
                                    <th>Recette</th>
                                    <th>Depense</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.payment_customer_ids + o.payment_supplier_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-field="line.date"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.partner_id"/>
                                        </td>
                                        <td>
                                            <t t-if="line.payment_type == 'inbound'">
                                                <span t-field="line.amount"/>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-if="line.payment_type == 'outbound'">
                                                <span t-field="line.amount"/>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="text-center col-4">
                                <h6 class="font-weight-bold">Solde De <span t-field="o.journal_id.name"/> Du <span t-field="o.date"/></h6>
                            </div>
                            <div class="text-right col-3">
                                <h6 class="font-weight-bold"><span t-field="o.total_amount"/></h6>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>

    </template>

    <template id="smartest_payment_cash.cash_statement_template">
        <t t-call="smartest_payment_cash.cash_statement_document"/>
    </template>


    <record id="smartest_cash_statement_report_action" model="ir.actions.report">
        <field name="name">Etat Caisse</field>
        <field name="model">cash.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">smartest_payment_cash.cash_statement_template</field>
        <field name="report_file">smartest_payment_cash.cash_statement_template</field>
        <field name="print_report_name">'Etat Caisse - %s' % (object.name)</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_cash_statement"/>
    </record>
</odoo>