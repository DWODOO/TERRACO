<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <menuitem id="financial_reports_menu_item" name="Financial reports" parent="account.menu_finance_reports"  groups="account.group_account_user"/>

        <!--Bilan Comptable-->

        <record id="bilan_report_form_view" model="ir.ui.view">
            <field name="name">bilan.report.form.view</field>
            <field name="model">bilan.report</field>
            <field name="arch" type="xml">
                <form string="Bilan">
                    <field name="company_id" invisible="1"/>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_bilan_report_view" model="ir.actions.act_window">
            <field name="name">Bilan Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bilan.report</field>
            <field name="view_id" ref="bilan_report_form_view"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="bilan_report_menu" name="Bilan"
                  action="action_bilan_report_view"
                  parent="financial_reports_menu_item"/>

        <!--Compte de resultat -->

        <record id="tcr_report_form_view" model="ir.ui.view">
            <field name="name">tcr.report.form.view</field>
            <field name="model">tcr.report</field>
            <field name="arch" type="xml">
                <form string="Compte de résultat">
                    <field name="company_id" invisible="1"/>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tcr_report_view" model="ir.actions.act_window">
            <field name="name">Compte de résultat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tcr.report</field>
            <field name="view_id" ref="tcr_report_form_view"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="tcr_report_menu" name="Compte de résultat"
                  action="action_tcr_report_view"
                  parent="financial_reports_menu_item"/>

        <!--Tableau des amortissements -->

        <record id="amortissement_report_form_view" model="ir.ui.view">
            <field name="name">amortissement.report.form.view</field>
            <field name="model">amortissement.report</field>
            <field name="arch" type="xml">
                <form string="Tableau des amortissements">
                    <field name="company_id" invisible="1"/>
                    <group col="4">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_amortissement_report_view" model="ir.actions.act_window">
            <field name="name">Tableau des amortissements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">amortissement.report</field>
            <field name="view_id" ref="amortissement_report_form_view"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="amortissement_report_menu" name="Tableau des amortissements"
                  action="action_amortissement_report_view"
                  parent="financial_reports_menu_item"/>


    </data>
</odoo>