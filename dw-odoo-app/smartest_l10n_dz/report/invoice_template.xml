<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="smartest_account_move_inherited" name="Facture inherited"
              inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-set='address']" position="replace">
            <div>
                <h2 class="text-center">
                    <span>Facture N°</span>
                    <span t-field="o.name"/>
                </h2>
                <div class="row">
                    <div class="col-6 p-4">
                        <ul class="list-unstyled">
                            <li t-if="o.date">
                                <strong>Date :</strong>
                                <span t-field="o.date"/>
                            </li>
                            <li t-if="o.payment_method_id">
                                <strong>Methode de paiement :</strong>
                                <span t-field="o.payment_method_id"/>
                            </li>
                            <li t-if="o.invoice_payment_term_id">
                                <strong>Conditions de règlement :</strong>
                                <span t-field="o.invoice_payment_term_id"/>
                            </li>
<!--                            <li t-if="o.company_id.titulaire">-->
<!--                                <span style="display:block;"><strong>Titulaire : </strong><span t-field="o.company_id.titulaire"/></span>-->
<!--                            </li>-->
<!--                            <li t-if="o.company_id.Banque_adresse">-->
<!--                                <span style="display:block;"><strong>Banque : </strong><span t-field="o.company_id.Banque_adresse"/></span>-->
<!--                            </li>-->
<!--                            <li t-if="o.company_id.rib">-->
<!--                                <span style="display:block;"><strong>RIB : </strong><span t-field="o.company_id.rib"/></span>-->
<!--                            </li>-->
                        </ul>
                    </div>
                    <div class="col-6 text-dark bg-white p-2 rounded  border border-dark">
                        <address t-field="o.partner_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <div t-if="o.partner_id.vat" class="mt16">
                            <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"
                               id="inv_tax_id_label"/>
                            <t t-else="">Tax ID</t>:
                            <span t-field="o.partner_id.vat"/>
                        </div>
                        <t t-if="o.partner_id.nis">
                            <strong>NIS:</strong>
                            <span t-field="o.partner_id.nis"/>
                        </t>
                        <br/>
                        <t t-if="o.partner_id.fiscal_identification">
                            <strong>NIF:</strong>
                            <span t-field="o.partner_id.fiscal_identification"/>
                        </t>
                        <br/>
                        <t t-if="o.partner_id.commercial_register">
                            <strong>RC:</strong>
                            <span t-field="o.partner_id.commercial_register"/>
                        </t>
                        <br/>
                        <t t-if="o.partner_id.taxation">
                            <strong>AI:</strong>
                            <span t-field="o.partner_id.taxation"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('page')]//h2" position="replace">
            <br/>
            <br/>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-sm o_main_table" name="invoice_line_table">
                <thead>
                    <tr>
                        <th name="th_sm_product_line_count" class="text-center" style="width:2%;">
                            <strong>#</strong>
                        </th>
                        <th name="th_code" style="width:18%;">
                            <span>Code</span>
                        </th>
                        <th name="th_description" class="text-left">
                            <span>Désignation</span>
                        </th>
                        <th name="th_quantity" class="text-right" style="width:8%;">
                            <span>QTE</span>
                        </th>
                        <th name="th_quantity" class="text-right" style="width:8%;">
                            <span>uom</span>
                        </th>
<!--                        <th name="th_origin" class="text-right">-->
<!--                            <strong>Origin</strong>-->
<!--                        </th>-->

                        <th name="th_priceunit"
                            style="width:16%;"
                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>
                                PU HT
                            </span>
                        </th>
                        <th name="th_price_unit" t-if="display_discount"
                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_subtotal" class="text-right" style="width:16%;">
                            <span>Sous Total</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="count" t-value="0"/>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines"
                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td class="text-center">
                                    <t t-set="count" t-value="count + 1"/>
                                    <span t-esc="count"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.default_code"/>
                                </td>
                                <td name="account_invoice_line_name">
                                    <span t-field="line.name"
                                          t-options="{'widget': 'text'}"/>
                                </td>
                                <td class="text-right">
                                    <t t-if="line.quantity.is_integer()">
                                        <t t-set="qty" t-value="round(line.quantity)"/>
                                        <span t-esc="qty"/>
                                    </t>
                                    <t t-else="">
<!--                                    <t t-set="qty" t-value="round((line.quantity), 2)"/>-->
                                    <span t-field="line.quantity"/>
                                    </t>
                                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_uom_id"/>
                                </td>
                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount"
                                    t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span class="text-nowrap" t-field="line.discount"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span class="text-nowrap" t-field="line.price_subtotal"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Sous Total</strong>
                                    <span t-esc="current_subtotal"
                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace"/>
        <xpath expr="//p[@name='payment_communication']" position="replace"/>
        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row">
                <div class="col-6 mt-4">
                    <p>
                        Arrêter la présente facture
                        à la somme de
                        <strong>
                            <span t-field="o.amount_total_words"/>
                        </strong>
                        .
                    </p>
                </div>
                <div class="col-6">
                    <table class="table table-sm" style="page-break-inside: avoid;">
                        <tr class="border-black o_subtotal" style="">
                            <td class="o_price_total">
                                <strong>Sous Total HT</strong>
                            </td>
                            <td class="text-right o_price_total">
                                <span t-field="o.amount_untaxed"/>
                            </td>
                        </tr>
                            <tr style="">
                                <td>
                                    <strong>TVA(19%)</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.amount_tax"/>
                                </td>
                            </tr>

                        <tr class="border-black o_total_stamp_duty" style="" t-if="o.apply_stamp_duty_tax">
                            <td name="td_amount_total_stamp_duty_label">
                                <strong>Timbre</strong>
                            </td>
                            <td name="td_amount_total_stamp_duty" class="text-right">
                                <span t-field="o.amount_stamp_tax"/>
                            </td>
                        </tr>
                        <tr class="border-black o_total">
                            <td>
                                <strong>Total TTC DZD</strong>
                            </td>
                            <td class="text-right">
                                <span class="text-nowrap" t-field="o.amount_total"/>
                            </td>
                        </tr>
                        <t t-if="print_with_payments">
                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                <t t-foreach="payments_vals" t-as="payment_vals">
                                    <tr>
                                        <t t-set="payment_id"
                                           t-value="o.env['account.payment'].sudo().browse(payment_vals['payment_id'])"/>
                                        <td>
                                            <i class="oe_form_field text-right oe_payment_label">
                                                Payé le
                                                <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                                            </i>
                                            <i t-if="payment_vals['display_payment_ref_on_invoice']"
                                               class="oe_form_field text-right oe_payment_ref_label">
                                                <br/>
                                                <span t-esc="payment_vals['payment_method_name']"/>:
                                                <span t-esc="payment_vals['payment_ref']"/>
                                            </i>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="payment_vals['amount']"
                                                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="len(payments_vals) > 0">
                                    <tr class="border-black">
                                        <td>
                                            <strong>Montant dû</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_residual"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </t>
                    </table>
                </div>
            </div>
        </xpath>
<!--        <xpath expr="//span[@t-field='o.invoice_payment_term_id.note']//.." position="replace"/>-->
        <xpath expr="//div[hasclass('page')]" position="inside">
            <br/>

            <h6 class="font-weight-bold" style="margin-bottom: 10px;">
                <strong>SIGNATURE ET CACHET</strong>
            </h6>
        </xpath>
    </template>
</odoo>
