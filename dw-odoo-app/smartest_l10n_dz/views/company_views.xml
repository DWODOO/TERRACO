<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    Form View    -->
        <!--
        Inheriting company form view in order to:
            1- Add four fields for company fiscal information in  separate tab Country
        -->
        <record id="view_company_form_inherit" model="ir.ui.view">
            <field name="name">view_company_form_inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Country">
                        <group sting="Fiscal" name="container_row_2">
                            <group>
                                <field name="commercial_register" required="1"/>
                            </group>
                            <group>
                                <field name="fiscal_identification" required="1"/>
                            </group>
                            <group>
                                <field name="taxation" required="1"/>
                            </group>
                            <group>
                                <field name="nis" required="1"/>
                            </group>
<!--                             <group>-->
<!--                                <field name="designation_entreprise" required="1"/>-->
<!--                            </group>-->
<!--                            <group>-->
<!--                                <field name="activite" required="1" />-->
<!--                            </group>-->
<!--                            <group>-->
<!--                                <field name="adresse" required="1"/>-->
<!--                            </group>-->


                        </group>
                        <field name="company_cnas_ids" nolabel="1"
                            context="{'default_company_id': id,
                            'default_commercial_register': commercial_register}">
                            <tree string="Line List" editable="bottom">
                                <field name="commercial_register" required="1"/>
                                <field name="employer_number" required="1"/>
                                <field name="payer_center" required="1"/>
                                <field name="company_id" required="1" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>