<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="smartest_view_account_payment_tree_inherit" model="ir.ui.view">
            <field name="name">smartest.account.payment.tree.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="is_reconciled_with_invoice" string="Reconciled"/>
                </field>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="amount_open" string="Opened Amount"/>
                </xpath>
            </field>
        </record>
        <record id="smartest_view_account_payment_search_inherit" model="ir.ui.view">
            <field name="name">smartest.account.payment.search.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <filter name="reconciled" position="after">
                    <filter name="reconciled_with_invoice" string="Reconciled with Invoice"
                            domain="[('is_reconciled_with_invoice', '=', True)]"/>
                </filter>
            </field>
        </record>
        <record id="smartest_view_account_payment_graph_inherit" model="ir.ui.view">
            <field name="name">smartest.account.payment.graph.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_graph"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="amount_open" type="measure"/>
                </xpath>
            </field>
        </record>

        <!--
            Inheriting the following action in order to set the default value of the account.move.line as 'entry' when
            calling this action
        -->
        <record id="account.action_move_journal_line" model="ir.actions.act_window">
            <field name="context">{'default_type': 'entry', 'view_no_maturity': True}</field>
        </record>
    </data>
</odoo>
