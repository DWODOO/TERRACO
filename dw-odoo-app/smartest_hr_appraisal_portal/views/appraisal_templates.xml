<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_appraisal" name="Portal My Home : Appraisal" inherit_id="portal.portal_my_home" priority="5">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Appraisals</t>
                <t t-set="url" t-value="'/my/appraisals'"/>
                <t t-set="placeholder_count" t-value="'appraisal_count'"/>
<!--                <t t-set="count" t-value="appraisal_count"/>-->
            </t>
        </xpath>
    </template>

    <template id="portal_my_appraisals" name="My Appraisals">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Appraisals</t>
            </t>
            <t t-if="not appraisals">
                <p>There are currently no appraisals for your account.</p>
            </t>
            <t t-if="appraisals" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Appraisal #</th>
                        <th class="text-right">Appraisal Quarter</th>
                        <th class="text-right">Valid Until</th>
                        <th class="text-right">Status</th>
                    </tr>
                </thead>
                <t t-foreach="appraisals" t-as="appraisal">
                    <tr>
                        <td><a t-att-href="appraisal.get_portal_url()"><t t-esc="appraisal.name"/></a></td>
<!--                        <td class="text-right"><span t-field="appraisal.appraisal_quarter"/></td>-->
                        <td class="text-right"><span t-field="appraisal.date_close"/></td>
                        <td class="text-center">
                            <span t-field="appraisal.state"/>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="appraisal_portal_content" name="Appraisal Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
          <h2 class="my-0">
                <em t-esc="appraisal.name"/>
            </h2>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations"><div class="row" id="appraisal_date">
                    <div class="mb-3 col-6">
                        <div class="mb-1" t-if="appraisal.date_close">
                            <strong>Appraisal Date:</strong>
                            <span t-field="appraisal.date_close" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="mb-1" t-if="appraisal.appraisal_quarter">
                            <strong>Quarter:</strong>
                            <span t-field="appraisal.appraisal_quarter" t-options='{"widget": "date"}'/>
                        </div>
                    </div>
                    <div class="mb-3 col-6">
                        <div class="mb-1" t-if="appraisal.date_close">
                            <strong>Total Mark:</strong>
                            <span t-field="appraisal.total_score"/>
                        </div>
                        <div class="mb-1" t-if="appraisal.appraisal_quarter">
                            <strong>Overall rating:</strong>
                            <span t-field="appraisal.overall_rating"/>
                        </div>
                    </div>
                </div>
            </div>

            <section id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Appraisal</h3>

                <table class="table table-sm" id="appraisal_table">
                    <thead class="bg-100">
                        <tr>
                            <th class="text-left">Factor</th>
                            <th class="text-right">Score</th>
                            <th class="text-left">Level</th>
                        </tr>
                    </thead>
                    <tbody class="appraisal_tbody">
                        <t t-foreach="appraisal.appraisal_line_ids" t-as="line">
                            <tr>
                                <td class="text-left">
                                    <span t-field="line.factor_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.score"/> / <strong><span t-field="line.factor_score"/></strong>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.level_id"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </section>
        </div>
    </template>
    
    <template id="appraisal_portal_template" name="Appraisal Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t  t-if="is_internal_user and action" t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (appraisal._name, appraisal.id, action.id)"/>
                    <t t-set="custom_html">This is a preview of the appraisal.</t>
                </t>
            </t>

            <div class="row mt16 o_portal_appraisal_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <div class="mb-0">
                            <b t-field="appraisal.total_score" data-id="total_score" style="font-size: x-large;"/> Pts
                        </div>
                        <div class="mt-0">
                            <span class="text-muted" t-field="appraisal.overall_rating"/>
                        </div>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           t-att-href="appraisal.get_portal_url(report_type='pdf', download=True)"
                                           title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                           t-att-href="appraisal.get_portal_url(report_type='pdf')"
                                           id="print_invoice_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/> Print
                                        </a>
                                    </div>
                                </div>
                            </li>

                            <li t-if="appraisal.employee_id.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Validator</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="validator.user_id.image_1024" t-att-src="image_data_uri(validator.user_id.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not validator.user_id.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="validator.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="appraisal_content" class="col-12 col-lg justify-content-end">
                    <!-- main content -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="smartest_hr_appraisal_portal.appraisal_portal_content"/>
                    </div>
                    
                    <!-- chatter -->
                    <div id="appraisal_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="appraisal"/>
                        </t>
                    </div>
                </div><!-- // #appraisal_content -->
            </div>
        </xpath>
    </template>
</odoo>
