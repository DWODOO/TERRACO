<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_home_payslip" name="Portal My Home : Payslip" inherit_id="portal.portal_my_home" priority="60">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Payslips</t>
                <t t-set="url" t-value="'/my/payslips'"/>
                <t t-set="placeholder_count" t-value="'payslip_count'"/>
<!--                <t t-set="count" t-value="payslip_count"/>-->
            </t>
        </xpath>
    </template>

    <template id="portal_my_payslips" name="My Payslips">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Payslips</t>
            </t>
            <t t-if="not payslips">
                <p>There are currently no payslip for your account.</p>
            </t>
            <t t-if="payslips" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Payslip #</th>
                        <th>Month</th>
                        <th>From</th>
                        <th>To</th>
                        <th class="text-right">Net</th>
                    </tr>
                </thead>
                <t t-foreach="payslips" t-as="payslip">
                    <tr>
                        <td><a t-att-href="payslip.get_portal_url()"><t t-esc="payslip.number"/></a></td>
                        <td class="text-capitalize"><span t-field="payslip.payslip_run_id"/></td>
                        <td><span t-field="payslip.date_from"/></td>
                        <td><span t-field="payslip.date_to"/></td>
                        <td class="text-right"><span t-field="payslip.net_salary"/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="payslip_portal_content" name="Payslip Portal Content">
        <!-- Intro -->
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
            <h2 class="my-0">
                <em t-esc="payslip.number"/>
            </h2>
        </div>

        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <!-- Informations -->
            <div id="informations"><div class="row" id="payslip_date">
                    <div class="mb-3 col-6">
                        <div class="mb-1" t-if="payslip.payslip_run_id">
                            <strong>Month:</strong>
                            <span t-field="payslip.payslip_run_id"/>
                        </div>
                        <div class="mb-1" t-if="payslip.date_from">
                            <strong>From Date:</strong>
                            <span t-field="payslip.date_from" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="mb-1" t-if="payslip.date_to">
                            <strong>To Date:</strong>
                            <span t-field="payslip.date_to" t-options='{"widget": "date"}'/>
                        </div>
                    </div>
                    <div class="mb-3 col-6">
                        <div class="mb-1" t-if="payslip.base_salary">
                            <strong>Wage salary:</strong>
                            <span t-field="payslip.base_salary"/>
                        </div>
                        <div class="mb-1" t-if="payslip.post_salary">
                            <strong>Post salary:</strong>
                            <span t-field="payslip.post_salary"/>
                        </div>
                        <div class="mb-1" t-if="payslip.net_salary">
                            <strong>Net salary:</strong>
                            <span t-field="payslip.net_salary"/>
                        </div>
                    </div>
                </div>
            </div>

            <section id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Payslip</h3>

                <table class="table table-sm" id="payslip_table">
                    <thead class="bg-100">
                        <tr>
                            <th class="text-left">Code</th>
                            <th class="text-left">Name</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Rate</th>
                            <th class="text-right">Amount</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody class="payslip_tbody">
                        <t t-foreach="payslip.line_ids" t-as="line">
                            <tr t-if="not line.salary_rule_id.portal_hide">
                                <td class="text-left">
                                    <span t-field="line.code"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.quantity"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.rate"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.amount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.total"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </section>
        </div>
    </template>
    
    <template id="payslip_portal_template" name="Payslip Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t  t-if="is_internal_user and action" t-set="o_portal_fullwidth_alert">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (payslip._name, payslip.id, action.id)"/>
                    <t t-set="custom_html">This is a preview of the payslip.</t>
                </t>
            </t>

            <div class="row mt16 o_portal_payslip_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <div class="mb-0">
                            <h2>
                                <span t-field="payslip.net_salary" data-id="net_salary" style="font-size: x-large;"/>
                            </h2>
                        </div>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1 mr-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_download_btn"
                                           t-att-href="payslip.get_portal_url(report_type='pdf', download=True)"
                                           title="Download"><i class="fa fa-download"/> Download</a>
                                    </div>
                                    <div class="btn-group flex-grow-1 mb-1">
                                        <a class="btn btn-secondary btn-block o_print_btn o_portal_invoice_print"
                                           t-att-href="payslip.get_portal_url(report_type='pdf')"
                                           id="print_invoice_report" title="Print" target="_blank">
                                            <i class="fa fa-print"/> Print
                                        </a>
                                    </div>
                                </div>
                            </li>

                            <li class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Payroll officer</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="payslip.create_uid.image_1024" t-att-src="image_data_uri(payslip.create_uid.image_1024)" alt="Contact"/>
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-if="not payslip.create_uid.image_1024" src="/web/static/src/img/placeholder.png" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="payslip.create_uid" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>

                <!-- Page content -->
                <div id="payslip_content" class="col-12 col-lg justify-content-end">
                    <!-- main content -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}">
                        <div t-call="smartest_hr_payroll_portal.payslip_portal_content"/>
                    </div>
                    
                    <!-- chatter -->
                    <div id="payslip_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="payslip"/>
                        </t>
                    </div>
                </div><!-- // #payslip_content -->
            </div>
        </xpath>
    </template>
</odoo>
