<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="smartest_sale_margin_sale_order">
        <field name="name">sale.order.margin.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='margin']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
            <xpath expr="//div[@class='text-nowrap']" position="attributes">
                <attribute name="groups">
                    smartest_sale_margin.group_sale_margin
                </attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_sale_margin_sale_order_line">
        <field name="name">sale.order.line.margin.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='purchase_price']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_sale_margin_sale_order_line_form">
        <field name="name">sale.order.line.tree.margin.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='purchase_price']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='margin']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='margin_percent']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="smartest_sale_margin_sale_order_pivot">
        <field name="name">sale.order.margin.view.pivot</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='margin_percent']" position="attributes">
                <attribute name="groups">smartest_sale_margin.group_sale_margin</attribute>
            </xpath>
        </field>
    </record>

</odoo>
