<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="leave_categories_tree_view" model="ir.ui.view">
        <field name="name">leave.categories.tree</field>
        <field name="model">leave.categories</field>
        <field name="arch" type="xml">
            <tree editable="bottom" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="leave_categories_action">
        <field name="name">leave categories</field>
        <field name="res_model">leave.categories</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="categories_leave_menu_crm"
              parent="hr_holidays.menu_hr_holidays_configuration"
              action="leave_categories_action"
              sequence="5"
    />


</odoo>