<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_employee_form_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='hr_settings']" position="after">
                <page name="smartest_timeoff" string="Time-off">
                    <group>
                        <group string="Holidays Requests">
                            <div class="o_row">
                                <field name="anticipated_request" class="oe_inline"/>
                                <span>Anticipated Request</span>
                            </div>
                        </group>
                        <group string="Allocation Attribution">
                            <div class="row">
                                <field name="working_in_south_area" class="oe_inline"/>
                                <span>Working in south area</span>
                            </div>
                            <div class="row">
                                <field name="attribution_auto_leave" class="oe_inline"/>
                                <span>Auto Allocation Assignment</span>
                            </div>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>