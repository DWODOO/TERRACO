<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_leave_accrual_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.accrual.level.form.inherit</field>
        <field name="model">hr.leave.accrual.level</field>
        <field name="inherit_id" ref="hr_holidays.hr_accrual_level_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[2]" position="after">
                <label  for="smartest_added_value_south"/>
                <div class="o_col">
                    <div class="o_row">
                        <field name="smartest_added_value_south" nolabel="1"/>
                        <field name="added_value_type" nolabel="1" readonly="1" force_save="1"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[4]" position="after">
                <label for="smartest_maximum_leave_south"/>
                <div class="o_col">
                    <div class="o_row">
                        <field name="smartest_maximum_leave_south" nolabel="1"/>
                        <field name="added_value_type" nolabel="1" readonly="1" force_save="1"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>