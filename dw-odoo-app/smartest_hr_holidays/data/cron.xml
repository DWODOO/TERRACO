<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_notification_carry_over_alert" model="ir.cron">
            <field name="name">Cron Job carry over</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="type">ir.action.server</field>
            <field name="code">model.cron_carry_over_method()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>12</field>
            <field name='interval_type'>months</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(month=1, day=2, hour=9, minute=0, second=0)+ relativedelta(years=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
        </record>

        <record id="ir_cron_cloture_allocation" model="ir.cron">
            <field name="name">Leave Period Closing</field>
            <field name="model_id" ref="model_hr_leave_allocation"/>
            <field name="state">code</field>
            <field name="type">ir.action.server</field>
            <field name="code">model.cron_cloture_method()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name='interval_number'>12</field>
            <field name='interval_type'>months</field>
            <field name="numbercall">-1</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(month=7, day=1, hour=0, minute=0, second=0)+ relativedelta(years=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>