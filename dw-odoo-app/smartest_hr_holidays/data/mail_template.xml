<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--************************** Approval Email template *************************-->
        <record id="approval_email_template_validated_leave" model="mail.template">
            <field name="name">Holidays: Validate leave</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Leave validation for {{ object.employee_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object._get_holidays_notification_emails() }}</field>
            <field name="report_template" ref="smartest_hr_holidays.action_hr_leave_title"/>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Dear,
                                <br/>
                                A holidays request has been approved for<b t-out="object.employee_id.name"
                                                                           data-oe-t-inline="true"/>.
                                Please find attached the leave entitlement.
                                <br/>
                                Have a nice day,
                                <br/>
                                The HR Team.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>
        <record id="approval_email_template_validated_absence" model="mail.template">
            <field name="name">Holidays: Validate Absence</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Leave validation for {{ object.employee_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object._get_holidays_notification_emails() }}</field>
            <!--            <field name="report_template" ref="smartest_hr_holidays.action_hr_leave_title"/>-->
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Dear,
                                <br/>
                                Absence request has been approved for<b t-out="object.employee_id.name"
                                                                        data-oe-t-inline="true"/>.
                                Please find attached the supporting document if exist!.
                                <br/>
                                Have a nice day,
                                <br/>
                                The HR Team.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>

        <record id="approval_email_template_carry_over" model="mail.template">
            <field name="name">Employee: Leave Carry Over Notification</field>
            <field name="model_id" ref="smartest_hr_holidays.model_hr_employee"/>
            <field name="subject">Leave Carry over notification</field>
            <field name="email_from">{{ user.partner_id.email_formatted }}</field>
            <field name="email_to">{{ object.work_email }}</field>
            <field name="body_html" type="html">
                <p>
                    Dear<span t-out="object.name"/>,
                    <br/>
                    <br/>
                    This is a kind notification to inform you that you still have
                    <strong>
                        <t t-out="object.remaining_leaves" data-oe-t-inline="true">0.0</t>
                        Days
                    </strong>
                    in your leave balance. <!--(<span t-out="allocation.holiday_status_id.name"/>)-->
                    <br/>
                    <br/>
                    For more details please check out the leave application.
                    <br/>
                    <br/>
                    HR Team,
                    <br/>
                    Regards.
                </p>
            </field>
        </record>

        <record id="request_cancellation_email_template" model="mail.template">
            <field name="name">Holidays: request cancellation</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Request Leave Cancellation for {{ object.employee_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object._get_holidays_notification_emails() }}</field>
            <!--            <field name="report_template" ref="smartest_hr_holidays.action_hr_leave_title"/>-->
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Dear,
                                <br/>
                                this employee <b t-out="object.employee_id.name"
                                                                        data-oe-t-inline="true"/>. wants to cancel her leave
                                <br></br>
                                To access on this leave , please enter on leave module
                                <br></br>
                                then you will find the leave linked to this employee with type <b t-out="object.holiday_status_id.name" data-oe-t-inline="true"/>
                                which begins on the date <b t-out="object.date_from" data-oe-t-inline="true"/> and will end on <b t-out="object.date_to" data-oe-t-inline="true"/>
                                <br/>
                                NB: The cancellation of this leave must be done before  <b t-out="object.date_from" data-oe-t-inline="true"/> , otherwise after this date it will not be possible to cancel it !
                                <br/>

                                Have a nice day,
                                <br/>
                                The HR Team.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>
        <record id="request_suspend_prolong_email_template" model="mail.template">
            <field name="name">Holidays: request Prolong/suspend</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Request Leave Cancellation for {{ object.employee_id.name }}</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object._get_holidays_notification_emails() }}</field>
            <!--            <field name="report_template" ref="smartest_hr_holidays.action_hr_leave_title"/>-->
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="width:100%; margin:0px auto;">
                    <tbody>
                        <tr>
                            <td valign="top" style="text-align: left; font-size: 14px;">
                                Dear,
                                <br/>
                                this employee<b t-out="object.employee_id.name"
                                                data-oe-t-inline="true"/>. wants to <b t-out="object.smartest_request_type_of_operation"
                                                data-oe-t-inline="true"/> her leave on date :<b t-out="object.request_date_prolonged_suspended"
                                                data-oe-t-inline="true"/> for this reason <b t-out="object.smartest_request_motif"
                                                data-oe-t-inline="true"/>
                                <br></br>
                                To access on this leave , please enter on leave module
                                <br></br>
                                then you will find the leave linked to this employee with type
                                <b t-out="object.holiday_status_id.name" data-oe-t-inline="true"/>
                                which begins on the date
                                <b t-out="object.date_from" data-oe-t-inline="true"/>
                                and will end on
                                <b t-out="object.date_to" data-oe-t-inline="true"/>
                                <br/>
                                Have a nice day,
                                <br/>
                                The HR Team.
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
        </record>
    </data>
</odoo>