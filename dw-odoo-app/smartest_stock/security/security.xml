<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="smartest_stock_limited_group" model="res.groups">
            <field name="name">Limited access</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
        </record>

        <record id="smartest_stock_limited_stock_location_access_rule" model="ir.rule">
            <field name="name">Limited access on Stock location</field>
            <field name="model_id" ref="stock.model_stock_location"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('smartest_warehouse_ids', 'in', user.smartest_warehouse_ids.ids), ('smartest_warehouse_ids', '=', False)]</field>
            <field name="groups" eval="[(4, ref('smartest_stock_limited_group'))]"/>
        </record>

        <record id="smartest_stock_limited_stock_quant_access_rule" model="ir.rule">
            <field name="name">Limited access on Stock quant</field>
            <field name="model_id" ref="stock.model_stock_quant"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('smartest_warehouse_ids', 'in', user.smartest_warehouse_ids.ids), ('smartest_warehouse_ids', '=', False)]</field>
            <field name="groups" eval="[(4, ref('smartest_stock_limited_group'))]"/>
        </record>
    </data>
</odoo>
