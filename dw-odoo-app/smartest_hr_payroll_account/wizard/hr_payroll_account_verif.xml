<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_lines_account_verif_form" model="ir.ui.view">
        <field name="name">hr.payroll.account.verif.wizard</field>
        <field name="model">hr.payroll.account.verif</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="payslip_run_id" required="1"/>

                </group>
                <group>
                    <label for="date_start" string="Period"/>
                    <div>
                        <field name="date_start" class="oe_inline"/>
                        -
                        <field name="date_end" class="oe_inline"/>
                    </div>
                </group>
                <notebook>
                    <page>
                        <field name="verif_line_ids" widget="one2many" >
                            <tree editable="bottom" decoration-danger="account_name  == False">
                                <field name="name"/>
                                <field name="account_name"/>
                                <field name="account_id"/>
                                <field name="status"/>
                                <field name="salary_rule_id"/>
                                <field name="rule_minus"/>
                                <field name="total"/>

                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <!--                    <button name="action_verify" string="Print" type="object" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_payroll_lines_account_verif" model="ir.actions.act_window">
        <field name="name">Payroll Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.payroll.account.verif</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="payroll_lines_account_verif_form"/>
        <field name="target">new</field>
    </record>
    <menuitem id="payroll_account_verif_menu_item"
              parent="smartest_hr_payroll.hr_divers_menu"
              action="action_payroll_lines_account_verif"
              name="Payroll Configuration"
              groups="account.group_account_user"
              sequence="60"/>
</odoo>
