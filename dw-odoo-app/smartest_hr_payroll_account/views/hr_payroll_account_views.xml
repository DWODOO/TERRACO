<?xml version="1.0"?>
<odoo>
    <data>
        <record id="form_view_payroll_account_line_form" model="ir.ui.view">
            <field name="name">payroll.account.line</field>
            <field name="model">payroll.account.line</field>
            <field name="arch" type="xml">
                <form string="Payroll Account Lines">
                    <sheet>
                        <div class="oe_button_box" name="button_box"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="account_id"/>
                                <field name="status" widget="radio"/>
                                <field name="active" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="type" widget="radio"/>
                                <field name="department_id"
                                       attrs="{'invisible': [('type', '!=', 'department')], 'required': [('type', '=', 'department')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Employees" attrs="{'invisible': [('type', '!=', 'employee')]}">
                                <field name="employee_ids" nolabel="1">
                                    <tree string="Employees List">
                                        <field name="name"/>
                                        <field name="department_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Salary rules">
                                <field name="salary_rule_ids" nolabel="1" >
                                    <tree string="Salary rules List" editable="top">
                                        <field name="salary_rule_id"/>
                                        <field name="category_id"/>
                                        <field name="code"/>
                                        <field name="minus" widget="boolean_toggle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_payroll_account_tree" model="ir.ui.view">
            <field name="name">payroll.account.tree</field>
            <field name="model">payroll.account</field>
            <field name="arch" type="xml">
                <tree string="Payroll Account">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_payroll_line_account_tree" model="ir.ui.view">
            <field name="name">payroll.account.line.tree</field>
            <field name="model">payroll.account.line</field>
            <field name="arch" type="xml">
                <tree string="Payroll Account Lines">
                    <field name="name"/>
                    <field name="type" optional="hide"/>
                    <field name="department_id" optional="hide"/>
                    <field name="account_id"/>
                    <field name="status"/>
                    <field name="employee_ids"/>
                    <field name="salary_rule_ids"/>
                </tree>
            </field>
        </record>

        <record id="view_payroll_account_rule_config_tree" model="ir.ui.view">
            <field name="name">payroll.account.rule_config.tree</field>
            <field name="model">payroll.account.rule_config</field>
            <field name="arch" type="xml">
                <tree string="Salary Rules">
                    <field name="salary_rule_id"/>
                    <field name="category_id"/>
                    <field name="code"/>
                    <field name="minus" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="form_view_payroll_account_form" model="ir.ui.view">
            <field name="name">payroll.account</field>
            <field name="model">payroll.account</field>
            <field name="arch" type="xml">
                <form string="Payroll Account">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>

                        <notebook>
                            <page string="Lines">
                                <field name="line_ids" nolabel="1" >
                                    <tree string="Line List">
                                        <field name="name"/>
                                        <field name="account_id"/>
                                        <field name="salary_rule_ids"/>
                                        <field name="employee_ids"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="payroll_lines_account_search" model="ir.ui.view">
        <field name="name">payroll.account.line.search</field>
        <field name="model">payroll.account.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]" help="Archived"/>
            </search>
        </field>
    </record>

        <record id="action_payroll_lines_account" model="ir.actions.act_window">
            <field name="name">Account Payroll</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payroll.account.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_payroll_line_account_tree"/>
            <field name="search_view_id" ref="payroll_lines_account_search"/>
        </record>

        <record id="payroll_lines_account_search" model="ir.ui.view">
        <field name="name">payroll.account.line.search</field>
        <field name="model">payroll.account.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]" help="Archived"/>
            </search>
        </field>
    </record>

    <menuitem id="payroll_account_menu_item"
              parent="smartest_hr_payroll.hr_divers_menu"
              action="action_payroll_lines_account"
              name="Payroll Account"
              groups="account.group_account_user"
              sequence="60"/>
    </data>
</odoo>