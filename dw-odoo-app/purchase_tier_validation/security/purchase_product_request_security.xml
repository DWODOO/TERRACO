<odoo>
    <record model="ir.module.category" id="module_category_purchase_product_request">
        <field name="name">Purchase Product Request</field>
        <field name="parent_id" ref="base.module_category_purchase_management" />
        <field name="sequence">10</field>
    </record>
    <record id="group_purchase_product_request_user" model="res.groups">
        <field name="name">Purchase Product Request User</field>
<!--        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]" />-->
        <field name="category_id" ref="module_category_purchase_product_request" />
    </record>
    <record model="ir.rule" id="purchase_product_request_comp_rule">
        <field name="name">Purchase product Request multi-company</field>
        <field name="model_id" ref="model_purchase_product_request" />
        <field name="global" eval="True" />
        <field
            name="domain_force"
        >['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="purchase_product_request_line_comp_rule">
        <field name="name">Purchase product Request Line multi-company</field>
        <field name="model_id" ref="model_purchase_product_request_line" />
        <field name="global" eval="True" />
        <field
            name="domain_force"
        >['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>
</odoo>
