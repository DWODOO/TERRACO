<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--************************** Approval Email template *************************-->

        <record id="mail_template_product_request_RFQ" model="mail.template">
            <field name="name">Purchase Request - Approved</field>
            <field name="lang">{{ object.assigned_to.partner_id.lang }}</field>
            <field name="model_id" ref="model_purchase_product_request"/>
            <field name="subject">PR Pending RFQ-{{ object.name }}</field>
            <field name="email_from">{{ object.assigned_to.partner_id.email }}</field>
            <field name="email_to">{{ object.purchase_team_members_id.partner_id.email }}</field>
            <field name="body_html" type="html">
                <p>
                    Mrs./Mr. {{ object.purchase_team_members_id.partner_id.name }} ,<br/><br/>
                    A purchase request with number {{ object.name }} is waiting for you to create RFQ. <br/><br/>
                        - Requested by:   {{ object.assigned_to.name }}<br/><br/>
                        - Latest reception date:  {{ object.latest_date }}<br/><br/>
                    Sincerely<br/><br/>
                                        <span>{{ object.url }}</span>
                    INCOMS Team<br/><br/>
                    ***Please do not reply to this e-mail, as this is an unmonitored alias.***
                </p>
            </field>
        </record>
    </data>
</odoo>