<odoo>
    <template id="equipment_barcode">
        <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                                <t t-foreach="docs" t-as="o">


            <div style="width: 25%; display: inline-table; height:14rem;">



                                    <table class="table table-bordered mb-0" style="border: 2px solid black;width:100%;" >

                                        <tr>
                                            <td class="text-center align-middle" style="height: 6rem">
                                                <span t-field="o.name"/>
                                                <img alt="Barcode"
                                                     t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', o.serial_no, 600, 150)"
                                                     style="width:100%;height::4rem;"/>
                                                <span t-field="o.serial_no"/>
                                            </td>
                                        </tr>
                                    </table>

                            </div>

                </t>

            </t>

        </t>

    </template>
</odoo>