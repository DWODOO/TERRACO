<?xml version="1.0" ?>
<odoo>
    <!--
        Form View - hr.appraisal.line
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_comment_wizard_form">
        <field name="name">hr.appraisal.comment.wizard.form</field>
        <field name="model">hr.appraisal.comment.wizard</field>
        <field name="arch" type="xml">
            <form string="Comment">
                <sheet>
                    <field name="appraisal_line_id" invisible="1"/>
                    <field name="comment" nolabel="1" placeholder="Put some comments here..."/>
                </sheet>
                <footer>
                    <button name="action_post" string="Post" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
