<?xml version="1.0" ?>
<odoo>
    <!--
        Form View - hr.appraisal.factor
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_factor_form">
        <field name="name">hr.appraisal.factor.form</field>
        <field name="model">hr.appraisal.factor</field>
        <field name="arch" type="xml">
            <form string="Appraisal factor">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Creativity"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="score"/>
                            <field name="category_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description..."/>
              </sheet>
          </form>
        </field>
    </record>

    <!--
        Tree View - hr.appraisal.factor
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_factor_tree">
        <field name="name">hr.appraisal.factor.tree</field>
        <field name="model">hr.appraisal.factor</field>
        <field name="arch" type="xml">
            <tree string="Appraisal Factors" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" placeholder="Creativity"/>
                <field name="description" optional="show"/>
                <field name="category_id" optional="show"/>
                <field name="score" optional="show" sum="Total Score"/>
            </tree>
        </field>
    </record>

    <!--
        Search View - hr.appraisal.factor
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_factor_search">
        <field name="name">hr.appraisal.factor.search</field>
        <field name="model">hr.appraisal.factor</field>
        <field name="arch" type="xml">
            <search string="Appraisal Factors">
                <field name="name"/>
                <field name="category_id"/>
                <field name="description"/>
                <field name="score"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter string="Category" name="group_category_id" context="{'group_by':'category_id'}"
                            domain="[]"/>
                </group>
            </search>
        </field>
    </record>

    <!--
        Action - hr.appraisal.factor
    -->
    <record id="appraisal_factor_action" model="ir.actions.act_window">
        <field name="name">Appraisal Factors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.factor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This view allows you to create appraisal factors.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Appraisal factors (hr.appraisal.factor)
    -->
    <menuitem id="menu_hr_appraisal_factor" name="Appraisal Factors" action="appraisal_factor_action"
              parent="hr_appraisal.menu_hr_appraisal_configuration" sequence="50"
              groups="hr_appraisal.group_hr_appraisal_manager"/>

</odoo>
