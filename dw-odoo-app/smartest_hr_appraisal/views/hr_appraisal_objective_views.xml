<?xml version="1.0" ?>
<odoo>
    <!--
        Form View - hr.appraisal.objective.type
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_type_form">
        <field name="name">hr.appraisal.objective.type.form</field>
        <field name="model">hr.appraisal.objective.type</field>
        <field name="arch" type="xml">
            <form string="Objective Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Course"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="score"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description..."/>
              </sheet>
          </form>
        </field>
    </record>

    <!--
        Tree View - hr.appraisal.objective.type
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_type_tree">
        <field name="name">hr.appraisal.objective.type.tree</field>
        <field name="model">hr.appraisal.objective.type</field>
        <field name="arch" type="xml">
            <tree string="Objective Type" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" placeholder="Course"/>
                <field name="description" optional="show"/>
                <field name="score" optional="show" sum="Total score"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!--
        Action - hr.appraisal.objective.type
    -->
    <record id="appraisal_objective_type_action" model="ir.actions.act_window">
        <field name="name">Objective Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.objective.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This view allows you to create types of objective.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Objective types (hr.appraisal.objective.type)
    -->
    <menuitem id="menu_hr_appraisal_objective_type" name="Objective Types" action="appraisal_objective_type_action"
              parent="hr_appraisal.menu_hr_appraisal_configuration" sequence="80"
              groups="hr_appraisal.group_hr_appraisal_manager"/>

    <!--
        Form View - hr.appraisal.objective
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_form">
        <field name="name">hr.appraisal.objective.form</field>
        <field name="model">hr.appraisal.objective</field>
        <field name="arch" type="xml">
            <form string="Employee Objective" create="false" edit="false" import="false">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="appraisal_employee_id" string="Evaluated by"/>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="quarter"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <label for="score" string ="Score"/>
                            <div class="o_row">
                                <field name="score" nolabel="1"/>
                                <span>/</span>
                                <span><field name="total_score" nolabel="1"/></span>
                            </div>
                        </group>
                        <field name="description" placeholder="Objective Actions" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--
        Tree View - hr.appraisal.objective
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_tree">
        <field name="name">hr.appraisal.objective.tree</field>
        <field name="model">hr.appraisal.objective</field>
        <field name="arch" type="xml">
            <tree string="Employee Objective">
                <field name="appraisal_employee_id" string="Evaluated by" optional="show"/>
                <field name="type_id" optional="hide"/>
                <field name="description"/>
                <field name="quarter"/>
                <field name="date_start" optional="hide"/>
                <field name="date_end" optional="hide"/>
                <field name="score" optional="hide"/>
            </tree>
        </field>
    </record>

    <!--
        Search View - hr.appraisal.objective
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_search">
        <field name="name">hr.appraisal.objective.search</field>
        <field name="model">hr.appraisal.objective</field>
        <field name="arch" type="xml">
            <search string="Employee Objective">
                <field name="description"/>
                <field name="type_id"/>
                <field name="employee_ids"/>
                <field name="appraisal_employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter string="Type" name="group_type_id" context="{'group_by':'type_id'}"
                            domain="[]"/>
                    <filter string="Appraisal Employee" name="group_appraisal_employee_id" context="{'group_by':'appraisal_employee_id'}"
                            domain="[]"/>
                </group>
                <filter string="Evaluated by me" name="my_objective_evaluation"
                        domain="[('appraisal_employee_id.user_id', '=', uid)]"/>
            </search>
        </field>
    </record>

    <!--
        Form View - hr.appraisal.objective.rating: Adding comments
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_rating_comment_form">
        <field name="name">hr.appraisal.objective.rating.form</field>
        <field name="model">hr.appraisal.objective.rating</field>
        <field name="arch" type="xml">
            <form string="Employee Objective" create="0">
                <sheet>
                    <group string="Employee Comments" invisible="not context.get('self_comment')">
                        <field name="employee_comment" nolabel="1"/>
                    </group>
                    <group string="Appraisal Employee Comments" invisible="context.get('self_comment')">
                        <field name="appraisal_employee_comment" nolabel="1"/>
                    </group>
                </sheet>
          </form>
        </field>
    </record>

    <!--
        Graph View - hr.appraisal.objective.rating
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_rating_graph">
        <field name="name">hr.appraisal.objective.rating.graph</field>
        <field name="model">hr.appraisal.objective.rating</field>
        <field name="arch" type="xml">
            <graph string="Employees Objectives Analysis">
                <field name="employee_id" type="row"/>
                <field name="objective_type_id" type="row"/>
                <field name="progress" type="measure" widget="percentage"/>
                <field name="rating" type="measure"/>
            </graph>
        </field>
    </record>

    <!--
        Pivot View - hr.appraisal.objective.rating
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_rating_pivot">
        <field name="name">hr.appraisal.objective.rating.pivot</field>
        <field name="model">hr.appraisal.objective.rating</field>
        <field name="arch" type="xml">
            <pivot string="Employees Performance">
                <field name="employee_id" type="row"/>
                <field name="objective_type_id" type="row"/>
                <field name="progress" type="measure" widget="percentage"/>
                <field name="rating" type="measure"/>
            </pivot>
        </field>
    </record>

    <!--
        Gantt View - hr.appraisal.objective
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_objective_gantt">
        <field name="name">hr.appraisal.objective.gantt</field>
        <field name="model">hr.appraisal.objective</field>
        <field name="arch" type="xml">
            <gantt
                    date_start="date_start"
                    date_stop="date_end"
                    color="type_id"
                    thumbnails="{'employee_id': 'image_128'}"
                    display_unavailability="1"
            >
                <field name="description" invisible="1"/>
            </gantt>
        </field>
    </record>

    <!--
        Action - hr.appraisal.objective.rating
    -->
    <record id="appraisal_objective_rating_action" model="ir.actions.act_window">
        <field name="name">Employees Objectives</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.objective.rating</field>
        <field name="view_mode">graph,pivot,tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This report allows you to analyse the achievements of your employees.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Employee Objectives Analysis (hr.appraisal.objective.rating)
    -->
    <menuitem id="menu_appraisal_objective_report" name="Employees Objectives" action="appraisal_objective_rating_action"
              parent="hr_appraisal.menu_hr_appraisal_report" sequence="30"
              groups="hr_appraisal.group_hr_appraisal_manager"/>

    <!--
        Action - hr.appraisal.objective: Gantt
    -->
    <record id="appraisal_objective_gantt_action" model="ir.actions.act_window">
        <field name="name">Employees Objectives</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.objective</field>
        <field name="view_mode">gantt,tree</field>
        <field name="context">
            {'search_default_group_type_id':1, 'search_default_group_employee_id':1,'search_default_my_objective_evaluation': 1}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This report allows you to analyse the achievements of your employees.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Employee Objectives (hr.appraisal.objective)
    -->
    <menuitem id="menu_appraisal_objective" name="Objectives" action="appraisal_objective_gantt_action"
              parent="hr_appraisal.menu_hr_appraisal_root" sequence="10"/>

</odoo>
