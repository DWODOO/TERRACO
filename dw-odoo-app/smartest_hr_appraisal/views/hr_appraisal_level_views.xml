<?xml version="1.0" ?>
<odoo>
    <!--
        Form View - hr.appraisal.level
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_level_form">
        <field name="name">hr.appraisal.level.form</field>
        <field name="model">hr.appraisal.level</field>
        <field name="arch" type="xml">
            <form string="Appraisal factor">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Strength"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <label for="score_interval_min" string="Score interval"/>
                            <div class="row">
                                <div class="col-6">
                                    <field name="score_interval_min" nolabel="1"/>
                                </div>
                                <div class="col-6">
                                    <field name="score_interval_max" nolabel="1"/>
                                </div>
                            </div>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description..."/>
              </sheet>
          </form>
        </field>
    </record>

    <!--
        Tree View - hr.appraisal.level
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_level_tree">
        <field name="name">hr.appraisal.level.tree</field>
        <field name="model">hr.appraisal.level</field>
        <field name="arch" type="xml">
            <tree string="Appraisal Factors" editable="bottom">
                <field name="name" placeholder="Strength"/>
                <field name="score_interval_min"/>
                <field name="score_interval_max"/>
                <field name="description" optional="hide"/>
            </tree>
        </field>
    </record>

    <!--
        Search View - hr.appraisal.level
    -->
    <record model="ir.ui.view" id="view_hr_appraisal_level_search">
        <field name="name">hr.appraisal.level.search</field>
        <field name="model">hr.appraisal.level</field>
        <field name="arch" type="xml">
            <search string="Appraisal Factors">
                <field name="name"/>
                <field name="score_interval_min"/>
                <field name="score_interval_max"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!--
        Action - hr.appraisal.level
    -->
    <record id="appraisal_level_action" model="ir.actions.act_window">
        <field name="name">Appraisal Levels</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.appraisal.level</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This view allows you to create appraisal levels.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Appraisal levels (hr.appraisal.level)
    -->
    <menuitem id="menu_hr_appraisal_level" name="Appraisal Levels" action="appraisal_level_action"
              parent="hr_appraisal.menu_hr_appraisal_configuration" sequence="70"
              groups="hr_appraisal.group_hr_appraisal_manager"/>

</odoo>
