<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.form</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="l10n_dz_payroll.hr_payslip_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='summary']//group[@name='salary_summary']" position="after">
                <group string="Leave" name="leave_summary">
                    <field name="is_leave_cumulated"/>
                    <field name="leave_days_count"/>
                    <field name="leave_allowance"/>
                </group>
                <group>
                    <field name="leave_allowance_cumulation" invisible="1"/>
                    <field name="leave_ids" invisible="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
