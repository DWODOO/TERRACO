<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="salary_rule_restraint_leave" model="hr.salary.rule">
            <field name="name">Abs for leave</field>
            <field name="sequence" eval="20"/>
            <field name="code">R020</field>
            <field name="category_id" ref="l10n_dz_payroll.CI"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days)</field>
            <field name="amount_select">percentage</field>
             <field name="quantity">-((worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days) if not contract.paid_hourly_attendance else(worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_hours))</field>
            <field name="amount_percentage_base">(contract.wage / (worked_days.WORK100.number_of_days if not contract.paid_hourly_attendance else worked_days.WORK100.number_of_hours))</field>
            <field name="amount_percentage" eval="100"/>
              <field name="struct_id"  eval="[(5, 0), (4, ref('l10n_dz_payroll.structure_base_dz'))]"/>

        </record>

        <record id="salary_rule_allowance_leave" model="hr.salary.rule">
            <field name="name">Allowance leave</field>
            <field name="sequence" eval="21"/>
            <field name="code">R021</field>
            <field name="category_id" ref="l10n_dz_payroll.CI"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days)</field>
            <field name="amount_select">percentage</field>
            <field name="quantity">(worked_days.LEGAL_LEAVE and worked_days.LEGAL_LEAVE.number_of_days)</field>
            <field name="amount_percentage_base">payslip.leave_allowance_cumulation</field>
            <field name="amount_percentage" eval="100"/>
           <field name="struct_id"  eval="[(5, 0), (4, ref('l10n_dz_payroll.structure_base_dz'))]"/>
        </record>



        <record id="salary_rule_restraint_sick_leave" model="hr.salary.rule">
            <field name="name">Sick leave</field>
            <field name="sequence" eval="22"/>
            <field name="code">R022</field>
            <field name="category_id" ref="l10n_dz_payroll.CI"/>
            <field name="condition_select">python</field>
            <field name="condition_python">result = (worked_days.SICK_LEAVE and worked_days.SICK_LEAVE.number_of_days)</field>
            <field name="amount_select">percentage</field>
            <field name="quantity">(worked_days.SICK_LEAVE and worked_days.SICK_LEAVE.number_of_days)</field>
            <field name="amount_percentage_base">contract.wage / (worked_days.WORK100 and worked_days.WORK100.number_of_days)</field>
            <field name="amount_percentage" eval="100"/>
           <field name="struct_id"  eval="[(5, 0), (4, ref('l10n_dz_payroll.structure_base_dz'))]"/>
        </record>
    </data>
</odoo>
