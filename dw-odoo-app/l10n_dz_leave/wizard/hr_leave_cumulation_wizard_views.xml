<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_leave_cumulation_wizard_form" model="ir.ui.view">
        <field name="name">hr.leave.cumulation.wizard.form</field>
        <field name="model">hr.leave.cumulation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <label for="year_reference" string="Year Reference"/>
                            <div>
                                <field name="year_reference"/>
                            </div>
                            <label for="date_from" string="Period"/>
                            <div>
                                <field  readonly="1" name="date_from" force_save="1" class="oe_inline"/>
                                -
                                <field readonly="1" name="date_to" force_save="1" class="oe_inline"/>
                            </div>
                            <field name="leave_type_id"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <label for="employee_ids"/>
                            <div>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <span class="text-muted">
                                    If no employee is selected it will take all the employees.
                                </span>
                            </div>
                        </group>
                    </group>
                    <group string="Payslips">
                        <field name="payslip_ids" nolabel="1" options="{'no_create_edit': True}">
                            <tree>
                                <field name="number"/>
                                <field name="employee_id"/>
                                <field name="name"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="leave_days_count"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Cumulation" name="action_cumulation" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="hr_leave_cumulation_wizard_action">
        <field name="name">Leaves cumulation</field>
        <field name="res_model">hr.leave.cumulation.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_leave_cumulation_wizard_form"/>
        <field name="target">new</field>
    </record>



    <menuitem id="hr_leave_cumulation_wizard_menu"
              parent="l10n_dz_payroll.hr_divers_menu"
              sequence="900"
              name="Clotures des congÃ©s"
              groups="hr_payroll.group_hr_payroll_manager"
              action="hr_leave_cumulation_wizard_action"/>

</odoo>
