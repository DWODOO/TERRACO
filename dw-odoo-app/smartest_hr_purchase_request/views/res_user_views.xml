<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="smartest_view_users_form_inherit_form" model="ir.ui.view">
        <field name="name">smartest.res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
                      <xpath expr="//notebook//page[last()]" position="attributes">
                <attribute name="string">Autorisations</attribute>
                      </xpath>
            <xpath expr="//notebook//page[last()]//group[1]" position="after">
                <group string="Demande de besoin">
                <field name="department_ids" widget="many2many_tags" domain="[('smartest_need_verif','=', True)]"/>
                <field name="author_department_ids" domain="[('smartest_need_verif','=', True)]" widget="many2many_tags"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>