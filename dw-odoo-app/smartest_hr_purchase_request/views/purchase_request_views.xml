<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="smartest_mpurchase_request_inherit_form" model="ir.ui.view">
        <field name="name">smartest.purchase.product.request.form.inherit</field>
        <field name="model">purchase.product.request</field>
        <field name="inherit_id" ref="purchase_tier_validation.view_purchase_product_request_form"/>
        <field name="arch" type="xml">
            <field name="requested_by" position="before">
                <field name="activity_user_id" readonly="1"/>
            </field>
            <xpath expr="//form/header" position="inside">
                <button name="button_done" states="draft,ongoing" string="Done" type="object" class="oe_highlight"
                        groups="smartest_hr_purchase_request.group_purchase_request_manager"/>
                <button name="button_draft" states="done" string="Reset" type="object"
                        groups="smartest_hr_purchase_request.group_purchase_request_manager"/>
                <button name="action_create_purchase_order" states="done" string="CreÃ© une Demande de prix"
                        type="object"
                        context="{'purchase_request_create_id': assigned_to}"
                        groups="smartest_hr_purchase_request.group_purchase_request_manager"/>
            </xpath>

            <field name="description" position="after">
                <field name="department_id" attrs="{'readonly': [('is_editable','=', False)]}" required="1"/>
                <field name="request_status" attrs="{'readonly': [('is_editable','=', False)]}"
                       groups="smartest_hr_purchase_request.group_purchase_request_manager"/>
            </field>
        </field>
    </record>
</odoo>