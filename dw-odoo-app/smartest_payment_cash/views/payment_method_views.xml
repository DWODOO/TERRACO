<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--    Action    -->
        <record id="payment_method_action" model="ir.actions.act_window">
            <field name="name">Payment Methods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment.method</field>
            <field name="view_mode">tree,form</field>
            <!--
                By default, when calling this action, only the payment types that has as code
                'cash.ticket' will be displayed. This is to avoid displaying other payment types created by no
                cash management users.
            -->
            <field name="domain">['|', ('code', '=', 'cash.ticket.cash'), ('code', '=', 'cash.ticket.check')]</field>
            <!--
                Setup automatically the fields (resp) payment_type and code to (resp) 'inbound' and 'cash.ticket' when
                hitting create button from this action. This is give a nice UX for this interface.
            -->
            <field name="context">{'default_payment_type': 'inbound', 'default_code': 'cash.ticket.cash', 'default_code': 'cash.ticket.check'}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Payment Type Available !
                </p>
            </field>
        </record>

    </data>
</odoo>