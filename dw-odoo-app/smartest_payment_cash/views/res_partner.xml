<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <!--    Form View    -->
        <record id="smartest_cash_statementview_partner_form_inherit" model="ir.ui.view">
            <field name="name">smartest.view.partner.form.inherit_cash_statement</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="smartest_base.smartest_view_partner_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_supplier']" position="before">
                    <field name="is_employee"/>
                    <label for="is_employee"/>
                    <br/>
                </xpath>
            </field>
        </record>

        <record id="smartest_view_partner_form_inherit" model="ir.ui.view">
            <field name="name">smartest.view.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="smartest_l10n_dz.smartest_view_partner_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting']//group//group[@name='accounting_entries']//field[@name='property_account_receivable_id']" position="before">
                    <field name="partner_account_group_id" options="{'no_create': 1, 'no_edit': 1}"
                           attrs="{'invisible' : [('is_employee', '=', False),('is_supplier', '=', False), ('is_customer', '=', False)], 'required' : ['|','|',('is_employee', '=', True),('is_supplier', '=', True), ('is_customer', '=', True)]}"/>
                </xpath>
                <xpath expr="//page[@name='accounting']//group//group[@name='accounting_entries']//field[@name='property_account_receivable_id']" position="after">
                    <field name="affected_partner" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='accounting']//group//group[@name='accounting_entries']//field[@name='property_account_receivable_id']" position="attributes">
                    <attribute name="attrs">{'invisible' : [('is_customer', '=', False),('is_employee', '=', False)], 'required' : ['|',('is_customer', '=', True),('is_employee', '=', True)]}</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
                <xpath expr="//page[@name='accounting']//group//group[@name='accounting_entries']//field[@name='property_account_payable_id']" position="attributes">
                    <attribute name="attrs">{'invisible' : [('is_supplier', '=', False),('is_employee', '=', False)], 'required' : ['|',('is_supplier', '=', True),('is_employee', '=', True)]}</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>