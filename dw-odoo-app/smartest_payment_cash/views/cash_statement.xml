<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Cash statement ********************************************-->
    <!--    Form View    -->
    <record id="cash_statement_view_form" model="ir.ui.view">
        <field name="name">cash_statemnt_view_form</field>
        <field name="model">cash.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate_statement" string="Confirm" class="oe_highlight" type="object" confirm="
                    Want to Proceed ?" states="draft,ongoing"/>
                    <div class="oe_button_box" name="button_box">
                    </div>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ongoing,done"/>
                </header>
                <sheet>
                    <group col="2">
                        <field name="name"/>
                    </group>
                    <group col="6">
                        <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="journal_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <field name="code_journal"/>
                    </group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group col="6">
                        <field name="open_amount" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}" force_save="1"/>
                        <field name="total_amount" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="close_amount" attrs="{'invisible': [('state', '=', 'draft')],'readonly': [('state', '!=', 'ongoing')]}"/>
                    </group>
                    <group>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="customer_payments" string="Encaissement(s)">
                            <field mode="tree,form" name="payment_customer_ids" context="{'default_date':date,'default_journal_id': journal_id,'default_payment_type': 'inbound','default_partner_type': 'customer', 'form_view_ref': 'account.view_account_payment_form'}">
                                <tree delete="0">
                                    <field name="id" invisible="1"/>
                                    <field name="name" readonly="1" optional="show"/>
                                    <field name="payment_type" invisible="1"/>
                                    <field name="journal_id" optional="hide"/>
                                    <field name="is_internal_transfer" optional="hide"/>
                                    <field name="partner_type" invisible="1"/>
                                    <field name="smartest_partner_type"/>
                                    <field name="destination_journal_id" attrs="{'invisible':[('is_internal_transfer', '!=', True)],'required':[('is_internal_transfer', '==', True)]}" optional="hide"/>
                                    <field name="partner_id" string="Partenaire" attrs="{'invisible':[('is_internal_transfer', '=', True)]}"/>
                                    <field name="amount"/>
                                    <field name="date" optional="hide"/>
                                    <field name="amount_company_currency_signed" widget="monetary" string="Amount" sum="Total" invisible="1"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                                    <button name="action_post" string="Confirm" class="oe_highlight" type="object" states="draft"/>
                                    <button name="open_linked_invoices" string="invoice(s)" class="btn-secondary" type="object" attrs="{'invisible': ['|',('state', '!=', 'posted'),('is_reconciled', '=', True)]}"/>
                                    <field name="reconciled_invoice_ids" widget="many2many_tags" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                                    <field name="is_reconciled" invisible="1"/>
                                    <button name="open_this_payment_form" string="Open" type="object"/>
                                </tree>
                            </field>
                        </page>
                        <page name="supplier_payments" string="Decaissement(s)">
                            <field name="payment_supplier_ids" mode='tree' context="{'default_date':date,'default_journal_id': journal_id,'default_payment_type': 'outbound','default_partner_type': 'supplier'}">
                                <tree delete="0">
                                    <field name="name" readonly="1" optional="show"/>
                                    <field name="payment_type" invisible="1"/>
                                    <field name="journal_id" optional="hide"/>
                                    <field name="destination_journal_id" attrs="{'invisible':[('is_internal_transfer', '!=', True)],'required':[('is_internal_transfer', '==', True)]}" optional="hide"/>
                                    <field name="is_internal_transfer" optional="hide"/>
                                    <field name="partner_type" invisible="1"/>
                                    <field name="smartest_partner_type"/>
                                    <field name="partner_id" string="Partenaire" attrs="{'invisible':[('is_internal_transfer', '=', True)]}"/>
                                    <field name="amount"/>
                                    <field name="date" optional="hide"/>
                                    <field name="amount_company_currency_signed" widget="monetary" string="Amount" sum="Total" invisible="1"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                                    <button name="action_post" string="Confirm" class="oe_highlight" type="object" states="draft"/>
                                    <field name="is_reconciled" invisible="1"/>
                                    <button name="open_linked_invoices" string="invoice(s)" class="btn-secondary" type="object" attrs="{'invisible': ['|',('state', '!=', 'posted'),('is_reconciled', '!=', False)]}"/>
                                    <field name="reconciled_bill_ids" widget="many2many_tags" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                                    <button name="open_this_payment_form" string="Open" type="object"/>
                                </tree>
                            </field>
                        </page>
                        <page name="other" string="Other">
                            <group col="4">
                                <field name="use_last_cash_statement_closed_amount" attrs="{'readonly': [('state', '!=', 'draft')]}" invisible="1"/>
                                <field name="allow_negative_closed_amount" attrs="{'readonly': [('state', 'in', ['validated','canceled'])]}" invisible="1"/>
                            </group>
                            <label for="note"/>
                            <field name="note" string="Note" attrs="{'readonly': [('state', 'in', ['validated','canceled'])]}"/>
                        </page>
                    </notebook>
                </sheet>
               <sheet>
                    <group col="4">
                        <button name="action_add_incoming_payment_from_show_invoice" string="Ajouter un paiement depuis des factures client" class="btn-link" type="object" states="ongoing"/>
                        <button name="action_add_outgoing_payment_from_show_invoice" string="Ajouter un paiement depuis des factures fournisseur" class="btn-link" type="object" states="ongoing"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <!--    Tree View    -->
    <record id="cash_statement_view_tree" model="ir.ui.view">
        <field name="name">cash_statement_view_tree</field>
        <field name="model">cash.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="journal_id" optional="show"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-danger="state == 'validated'" decoration-success="state == 'done'" optional="show"/>
<!--                <field name="active" optional="hide"/>-->
            </tree>
        </field>
    </record>
    <!--    Search    -->
    <record id="cash_statement_view_search" model="ir.ui.view">
        <field name="name">cash_statement_view_search</field>
        <field name="model">cash.statement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="journal_id"/>
                <field name="date"/>
                <separator/>
                <filter string="Open" name="state" domain="[('state', '=', 'ongoing')]"/>
                <filter string="Draft" name="state" domain="[('state', '=', 'draft')]"/>
                <filter string="Valider" name="state" domain="[('state', '=', 'validated')]"/>
                <filter string="Done" name="state" domain="[('state', '=', 'done')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Caisse" name="group_by_journal_id" context="{'group_by': 'journal_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--    Action    -->
    <record id="cash_statement_action" model="ir.actions.act_window">
        <field name="name">Cash Statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.statement</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('cash_statement_view_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('cash_statement_view_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Cash Statement
            </p>
        </field>
    </record>
    <menuitem id="smartest_cash_statement_menu" name="Cash Statement"  action="cash_statement_action"
          parent="smartest_payment_cash_menu_root" sequence="0"/>
</odoo>
