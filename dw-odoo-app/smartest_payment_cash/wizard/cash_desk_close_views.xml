<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Cash Desk ********************************************-->
    <!--    Form View    -->
    <record id="cash_desk_close_view_form" model="ir.ui.view">
        <field name="name">cash_desk_close_view_form</field>
        <field name="model">cash.desk.close</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="cash_desk_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group groups="account.group_account_user">
                            <field name="journal_id"/>
                            <field name="close_account_id"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_close" type="object" string="Close" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!--    Action    -->
    <record id="cash_desk_close_action" model="ir.actions.act_window">
        <field name="name">Cash Desk Close</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cash.desk.close</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
