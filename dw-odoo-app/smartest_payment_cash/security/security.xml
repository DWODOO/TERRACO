<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="smartest_cash_statement_ompany_rule">
            <field name="name">multi-cash statement company rule</field>
            <field name="model_id" ref="model_cash_statement"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>
        <!--
            Create a new Access Level Category for Cash Management System
            Basically, this category has two access levels :
                1- Cash user: Have only the rights to create & edit cash tickets.
                2- Cash Manager: Have advanced rights, like access to Cash Management Configuration, Setup Cash Desk
                and Cash Journals as well as statistic reports.
        -->
        <record id="module_category_car_cash" model="ir.module.category">
            <field name="name">Car Cash</field>
            <field name="description">Helps you manage your car cash.</field>
            <field name="sequence">15</field>
        </record>

        <record id="group_cash_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_car_cash"/>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_private_addresses'), ref('base.group_user')])]"/>
            <field name="comment">The user will be able to see documents.</field>
        </record>

        <record id="group_cash_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">The user will have access to the cash configuration as well as
                statistic reports.
            </field>
            <field name="category_id" ref="module_category_car_cash"/>
            <field name="implied_ids" eval="[(4, ref('group_cash_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="group_cash_close" model="res.groups">
            <field name="name">Close Cash</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="comment">The user will be able to generate account entry for cash closing.</field>
        </record>
    </data>
</odoo>