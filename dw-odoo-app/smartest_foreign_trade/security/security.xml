<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<data>
    <record id="module_category_foreign_trade_category" model="ir.module.category">
        <field name="name">Import/Export</field>
        <field name="description">Helps you manage your Foreign trade.</field>
        <field name="sequence">12</field>
    </record>

    <record id="group_foreign_trade_user" model="res.groups">
        <field name="name">User</field>
        <field name="comment">The user will have access to Foreign Trade.</field>
        <field name="category_id" ref="smartest_foreign_trade.module_category_foreign_trade_category"/>
    </record>
    <record id="group_foreign_trade_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">The user will have access to Foreign Trade configuration as well as
            statistic reports.
        </field>
        <field name="category_id" ref="smartest_foreign_trade.module_category_foreign_trade_category"/>
        <field name="implied_ids" eval="[(4, ref('smartest_foreign_trade.group_foreign_trade_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</data>
</odoo>