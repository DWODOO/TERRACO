<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="view_stock_landed_cost_form_inherit" model="ir.ui.view">
        <field name="name">stock.landed.cost.inherit.form</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="purchase_folder_import_id" groups="smartest_foreign_trade.group_foreign_trade_user"/>
                <field name="purchase_order_picking_ids" invisible="1"/>
                <field name="purchase_order_ids" groups="smartest_foreign_trade.group_foreign_trade_user"  widget="many2many_tags" domain="[('purchase_folder_import_id','in', [purchase_folder_import_id])]"/>
            </xpath>
            <field name="picking_ids" position="attributes">
                <attribute name="domain">[('company_id', '=', company_id), ('move_ids.stock_valuation_layer_ids', '!=', False), ('id', 'in', purchase_order_picking_ids)]</attribute>
            </field>
        </field>
    </record>

    <record id="act_sstock_landed_cost_import_folder" model="ir.actions.server">
        <field name="name">Landed Costs Valorisation Analysis</field>
        <field name="model_id"
               ref="stock_account.model_stock_valuation_layer"/>
        <field name="binding_model_id" ref="smartest_foreign_trade.model_smartest_import_folder"/>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="code">action = model.action_landed_costs_valorisation_analysis()</field>
    </record>
</odoo>