<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View    -->
    <record id="agency_view_form" model="ir.ui.view">
        <field name="name">agency_form_view</field>
        <field name="model">res.bank.agency</field>
        <field name="arch" type="xml">
            <form string="Agencies">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <group>
                        <group>

                                <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : True}"/>
                        </group>
                        <group>

                                <field name="bank_id" default_focus="1" placeholder="Bank" attrs="{'required' : True}"/>
                        </group>
                        <group>

                                <field name="code"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"
                                       context="{'default_country_id': country_id}"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options='{"no_open": True, "no_create": True}'/>
                            </div>
                            <field name="phone" widget="phone"/>
                            <field name="fax" widget="phone"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}"/>
                            <field name="website" string="Website" widget="url"
                                   placeholder="e.g. https://www.smartest.dz"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--    Tree View    -->

    <record id="agency_view_tree" model="ir.ui.view">
        <field name="name">agency_view_tree</field>
        <field name="model">res.bank.agency</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="code"/>
                <field name="name"/>
                <field name="bank_id"/>
                <field name="country_id"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <!--    Action    -->
    <record id="foreign_trade_bank_agency_action_form" model="ir.actions.act_window">
        <field name="name">Agencies</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.bank.agency</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by':['bank_id']}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Agency
            </p>
        </field>
    </record>
</odoo>