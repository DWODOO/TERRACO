<?xml version="1.0" ?>
<odoo>
    <!--
        Form View - planning.slot.type
    -->
    <record model="ir.ui.view" id="view_planning_slot_type_form">
        <field name="name">planning.slot.type.form</field>
        <field name="model">planning.slot.type</field>
        <field name="arch" type="xml">
            <form string="Planning Slot Type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Strength"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description..."/>
              </sheet>
          </form>
        </field>
    </record>

    <!--
        Tree View - planning.slot.type
    -->
    <record model="ir.ui.view" id="view_planning_slot_type_tree">
        <field name="name">planning.slot.type.tree</field>
        <field name="model">planning.slot.type</field>
        <field name="arch" type="xml">
            <tree string="Planning Slot Type" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name" placeholder="Time-off"/>
                <field name="description" placeholder="Description..." optional="hide"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>

    <!--
        Search View - planning.slot.type
    -->
    <record model="ir.ui.view" id="view_planning_slot_type_search">
        <field name="name">planning.slot.type.search</field>
        <field name="model">planning.slot.type</field>
        <field name="arch" type="xml">
            <search string="Appraisal Factors">
                <field name="name"/>
                <field name="sequence"/>
                <field name="color"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!--
        Action - planning.slot.type
    -->
    <record id="planning_slot_type_action" model="ir.actions.act_window">
        <field name="name">Planning Slot Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">planning.slot.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data is available.
            </p>
            <p class="text-muted">
                This view allows you to create planning entries types.
            </p>
        </field>
    </record>

    <!--
        Menu Item - Appraisal levels (planning.slot.type)
    -->
    <menuitem id="menu_planning_slot_type" name="Entry types" action="planning_slot_type_action"
              parent="planning.planning_menu_settings" sequence="70"
              groups="planning.group_planning_manager"/>

</odoo>
