<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_picking_form_inherit_purchase_request" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit_purchase_request</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="is_conforme"
                       attrs="{'invisible': [('picking_type_code', '!=', 'incoming')],'required' : [('state','in',['assigned'])],'readonly' : [('state','in',['done'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>