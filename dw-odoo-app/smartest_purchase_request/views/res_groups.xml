<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="smartest_view_groups_form_inherit" model="ir.ui.view">
        <field name="name">res.groups.form_inherit</field>
        <field name="model">res.groups</field>
        <field name="inherit_id" ref="base.view_groups_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="smartest_parent_group"  domain="[('category_id', '=', category_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>
