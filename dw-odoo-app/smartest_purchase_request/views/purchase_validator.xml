<?xml version="1.0" ?>

<odoo>
    <record id="view_purchase_validator_rules_tree" model="ir.ui.view">
        <field name="name">purchase.validator.tree</field>
        <field name="model">purchase.validator</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="validation_type"/>
            </tree>
        </field>
    </record>
    <record id="view_purchase_validator_rules_form" model="ir.ui.view">
        <field name="name">purchase.validator.form</field>
        <field name="model">purchase.validator</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="validation_type" required="1"/>
                    </group>
                    <group>
                        <field name="days"
                               attrs="{'invisible': [('validation_type','!=', ('purchase_process'))],'required': [('validation_type','=','purchase_process')]}"/>
                    </group>

                    <notebook>
                        <page string="Rules" attrs="{'invisible': [('validation_type','=', ('purchase_process'))]}">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="description" required="1"/>
                                    <field name="min_value" required="1"/>
                                    <field name="max_value" required="1"
                                           attrs="{'invisible' : [('is_limitless','=',True)]}"/>
                                    <field name="is_limitless"/>
                                    <field name="group_validator" required="1" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="purchase_rules_action">
        <field name="name">Purchase Rules</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.validator</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new purchase validator rule.
            </p>
        </field>
    </record>
    <menuitem
            id="menu_purchase_rules"
            sequence="2"
            groups="smartest_purchase_request.group_purchase_team"
            parent="menu_purchase_request"
            action="purchase_rules_action"
    />
</odoo>