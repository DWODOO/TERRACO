<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--******************************************** Payment Method ********************************************-->
    <!--    Form View    -->
    <record id="payment_method_view_form" model="ir.ui.view">
        <field name="name">payment_method_view_form</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Payment Method"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group name="left">
                            <field name="code"/>
                            <field name="payment_type"/>
                        </group>
                        <group>
                            <field name="apply_stamp_duty_tax"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--    Tree View    -->
    <record id="payment_method_view_tree" model="ir.ui.view">
        <field name="name">payment_method_view_tree</field>
        <field name="model">account.payment.method</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" placeholder="Payment Method"/>
                <field name="payment_type" optional="show"/>
                <field name="apply_stamp_duty_tax" optional="show"/>
            </tree>
        </field>
    </record>

    <!--    Action    -->
    <record id="payment_method_action" model="ir.actions.act_window">
        <field name="name">Payment Methods</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.payment.method</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Payment Type Available !
            </p>
        </field>
    </record>

    <menuitem id="account_menu_payment_method" name="Payment Methods"
              action="payment_method_action"
              parent="account.root_payment_menu"
              sequence="99"/>
</odoo>
