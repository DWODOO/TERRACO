<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_restourne_tree_view" model="ir.ui.view">
        <field name="name">sale_restourne.tree</field>
        <field name="model">sale.restourne</field>
        <field name="arch" type="xml">
            <tree editable="bottom" sample="1">
                <field name="amount_min"/>
                <field name="amount_max"/>
                <field name="percentage"/>
                <field name="payment_type"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sale_restourne_action">
        <field name="name">Matrice Restourne</field>
        <field name="res_model">sale.restourne</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="sale_restourne_manu"
              parent="sale.sale_menu_root"
              action="sale_restourne_action"
              sequence="35"
    />

    <record id="action_invoice_type_out_refund" model="ir.actions.act_window">
        <field name="name">Restournes</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_out_invoice_tree"/>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="domain">[('move_type', '=', 'out_refund'),('restourne', '=', True)]</field>
        <field name="context">{'default_move_type': 'out_refund','default_restourne': True}</field>
    </record>
    <menuitem id="menu_invoice_type_out_refund"
              parent="sale.sale_menu_root"
              action="action_invoice_type_out_refund"
              sequence="36"
    />
</odoo>